le":582,"_extension":583},"/maps/_manage/project-management","_manage",false,true,"","项目管理",{"type":391,"children":392,"toc":575},"root",[393,400,406,413,419,425,450,456,461,467,472,477,491,497,502,508,513,519,564,570],{"type":394,"tag":395,"props":396,"children":397},"element","h1",{"id":389},[398],{"type":399,"value":389},"text",{"type":394,"tag":401,"props":402,"children":404},"h2",{"id":403},"简介",[405],{"type":399,"value":403},{"type":394,"tag":407,"props":408,"children":410},"h4",{"id":409},"什么事情适合做项目",[411],{"type":399,"value":412},"什么事情适合做项目？",{"type":394,"tag":414,"props":415,"children":416},"p",{},[417],{"type":399,"value":418},"项目是在限定的资源及限定的时间内需要完成的一次性任务，具有限定性、独特性和明确的目标，所以和“维护”、“日常”是两码事。",{"type":394,"tag":407,"props":420,"children":422},{"id":421},"项目分哪几种类型",[423],{"type":399,"value":424},"项目分哪几种类型？",{"type":394,"tag":414,"props":426,"children":427},{},[428,434,436,441,443,448],{"type":394,"tag":429,"props":430,"children":431},"strong",{},[432],{"type":399,"value":433},"技术性",{"type":399,"value":435},"：提效为主；",{"type":394,"tag":429,"props":437,"children":438},{},[439],{"type":399,"value":440},"运营型",{"type":399,"value":442},"：业绩导向；",{"type":394,"tag":429,"props":444,"children":445},{},[446],{"type":399,"value":447},"产品型",{"type":399,"value":449},"：用户增长或留存指标为导向",{"type":394,"tag":407,"props":451,"children":453},{"id":452},"项目管理的核心是什么",[454],{"type":399,"value":455},"项目管理的核心是什么？",{"type":394,"tag":414,"props":457,"children":458},{},[459],{"type":399,"value":460},"项目管理的核心就是基于目标的管理。项目的质量三角围绕范围、时间和成本进行权衡，即以清晰可控的目标为导向，权衡人力及其它资源成本，使用里程碑分析、任务拆分 WBS 等工具管理目标。",{"type":394,"tag":407,"props":462,"children":464},{"id":463},"怎么设计项目目标",[465],{"type":399,"value":466},"怎么设计项目目标？",{"type":394,"tag":414,"props":468,"children":469},{},[470],{"type":399,"value":471},"通过 SMART 法则：Specific、Measurable、Attainable、Relevant、Time-based。",{"type":394,"tag":414,"props":473,"children":474},{},[475],{"type":399,"value":476},"一个简单的示例，比“提升客户续费率 50%”更好的项目目标是“在保证新开业绩前提下，9 月底季度续费率提升 20% 以上”。",{"type":394,"tag":414,"props":478,"children":479},{},[480,482],{"type":399,"value":481},"见：",{"type":394,"tag":483,"props":484,"children":488},"a",{"href":485,"rel":486},"https://wiki.mbalib.com/zh-tw/SMART%E5%8E%9F%E5%88%99",[487],"nofollow",[489],{"type":399,"value":490},"TODO，SMART@MBA",{"type":394,"tag":407,"props":492,"children":494},{"id":493},"确定项目目标前要做什么",[495],{"type":399,"value":496},"确定项目目标前要做什么？",{"type":394,"tag":414,"props":498,"children":499},{},[500],{"type":399,"value":501},"如果说目标是要解决的问题，那么在解决问题前还有发现问题和分析问题两个步骤。了解项目背景后，在项目前期进行充分的访谈和调研，才能分析出问题的解决路径，以及确定衡量目标得到解决的办法。",{"type":394,"tag":407,"props":503,"children":505},{"id":504},"什么是项目里程碑",[506],{"type":399,"value":507},"什么是项目里程碑？",{"type":394,"tag":414,"props":509,"children":510},{},[511],{"type":399,"value":512},"项目目标 > 项目里程碑 > 个人任务，作为中介，里程碑可以辅助拆分任务目标，并关注上下游依赖风险。好的任务拆分要保证目标的完整性和任务独立性，分解工作不能漏掉某项，而工作之间要相互独立，没有交叉依赖。",{"type":394,"tag":407,"props":514,"children":516},{"id":515},"自查清单应该包括哪些",[517],{"type":399,"value":518},"自查清单应该包括哪些？",{"type":394,"tag":520,"props":521,"children":522},"ol",{},[523,529,534,539,544,549,554,559],{"type":394,"tag":524,"props":525,"children":526},"li",{},[527],{"type":399,"value":528},"项目背景：目前的痛点是什么",{"type":394,"tag":524,"props":530,"children":531},{},[532],{"type":399,"value":533},"项目目标：希望达成什么",{"type":394,"tag":524,"props":535,"children":536},{},[537],{"type":399,"value":538},"衡量指标：关键指标是什么，如何衡量最终价值",{"type":394,"tag":524,"props":540,"children":541},{},[542],{"type":399,"value":543},"项目负责：谁对于最终目标负责",{"type":394,"tag":524,"props":545,"children":546},{},[547],{"type":399,"value":548},"项目人员：项目参与团队及人员",{"type":394,"tag":524,"props":550,"children":551},{},[552],{"type":399,"value":553},"项目范围：什么在范围内，什么不在",{"type":394,"tag":524,"props":555,"children":556},{},[557],{"type":399,"value":558},"时间规划：分哪几个阶段",{"type":394,"tag":524,"props":560,"children":561},{},[562],{"type":399,"value":563},"风险管理：项目风险及应对方式",{"type":394,"tag":407,"props":565,"children":567},{"id":566},"什么时候结项",[568],{"type":399,"value":569},"什么时候结项？",{"type":394,"tag":414,"props":571,"children":572},{},[573],{"type":399,"value":574},"如果项目目标在计划时间内得到实现，且能够在短时间内收集到业务数据辅助验证结果，那么就应该结项。项目收尾时应包括成果总结、经验复盘和文档沉淀：计划交付、实际交付与未交付的成果，经验教训、最佳实践，产品、运营和技术类文档，并总结为项目总结文档。",{"title":388,"searchDepth":576,"depth":576,"links":577},2,[578],{"id":403,"depth":576,"text":403},"markdown","content:6.maps:_manage:project-management.md","content","6.maps/_manage/project-management.md","md",[585,588],{"_path":586,"title":587,"description":388},"/maps/_linux/nginx/config-example","Nginx Config Example",{"_path":589,"title":590,"description":388},"/maps/_person/antonio-egas-moniz","安东尼奥·埃加斯·莫尼斯",1708107593631]