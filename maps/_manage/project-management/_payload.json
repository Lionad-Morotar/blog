hildren":177},"element","h2",{"id":176},"简介",[178],{"type":179,"value":176},"text",{"type":173,"tag":181,"props":182,"children":184},"h4",{"id":183},"什么事情适合做项目",[185],{"type":179,"value":186},"什么事情适合做项目？",{"type":173,"tag":188,"props":189,"children":190},"p",{},[191],{"type":179,"value":192},"项目是在限定的资源及限定的时间内需要完成的一次性任务，具有限定性、独特性和明确的目标，所以和\"维护\"、\"日常\"是两码事。",{"type":173,"tag":181,"props":194,"children":196},{"id":195},"项目分哪几种类型",[197],{"type":179,"value":198},"项目分哪几种类型？",{"type":173,"tag":188,"props":200,"children":201},{},[202,208,210,215,217,222],{"type":173,"tag":203,"props":204,"children":205},"strong",{},[206],{"type":179,"value":207},"技术性",{"type":179,"value":209},"：提效为主；",{"type":173,"tag":203,"props":211,"children":212},{},[213],{"type":179,"value":214},"运营型",{"type":179,"value":216},"：业绩导向；",{"type":173,"tag":203,"props":218,"children":219},{},[220],{"type":179,"value":221},"产品型",{"type":179,"value":223},"：用户增长或留存指标导向",{"type":173,"tag":181,"props":225,"children":227},{"id":226},"项目管理的核心是什么",[228],{"type":179,"value":229},"项目管理的核心是什么？",{"type":173,"tag":188,"props":231,"children":232},{},[233],{"type":179,"value":234},"项目管理的核心就是基于目标的管理。项目的质量三角围绕范围、时间和成本进行权衡，即以清晰可控的目标为导向，权衡人力及其它资源成本，使用里程碑分析、任务拆分 WBS 等工具管理目标。",{"type":173,"tag":181,"props":236,"children":238},{"id":237},"怎么设计项目目标",[239],{"type":179,"value":240},"怎么设计项目目标？",{"type":173,"tag":188,"props":242,"children":243},{},[244],{"type":179,"value":245},"通过 SMART 法则：Specific、Measurable、Attainable、Relevant、Time-based。",{"type":173,"tag":188,"props":247,"children":248},{},[249],{"type":179,"value":250},"一个简单的示例，比\"提升客户续费率 50%\"更好的项目目标是\"在保证新开业绩前提下，9 月底季度续费率提升 20% 以上\"。",{"type":173,"tag":188,"props":252,"children":253},{},[254,256],{"type":179,"value":255},"见：",{"type":173,"tag":257,"props":258,"children":262},"a",{"href":259,"rel":260},"https://wiki.mbalib.com/zh-tw/SMART%E5%8E%9F%E5%89%87",[261],"nofollow",[263],{"type":179,"value":264},"TODO，SMART@MBA",{"type":173,"tag":181,"props":266,"children":268},{"id":267},"确定项目目标前要做什么",[269],{"type":179,"value":270},"确定项目目标前要做什么？",{"type":173,"tag":188,"props":272,"children":273},{},[274],{"type":179,"value":275},"如果说目标是要解决的问题，那么在解决问题前还有发现问题和分析问题两个步骤。了解项目背景后，在项目前期进行充分的访谈和调研，才能分析出问题的解决路径，以及确定衡量目标得到解决的办法。",{"type":173,"tag":181,"props":277,"children":279},{"id":278},"什么是项目里程碑",[280],{"type":179,"value":281},"什么是项目里程碑？",{"type":173,"tag":188,"props":283,"children":284},{},[285],{"type":179,"value":286},"项目目标 > 项目里程碑 > 个人任务，作为中介，里程碑可以辅助拆分任务目标，并关注上下游依赖风险。好的任务拆分要保证目标的完整性和任务独立性，分解工作不能漏掉某项，而工作之间要相互独立，没有交叉依赖。",{"type":173,"tag":181,"props":288,"children":290},{"id":289},"自查清单应该包括哪些",[291],{"type":179,"value":292},"自查清单应该包括哪些？",{"type":173,"tag":294,"props":295,"children":296},"ol",{},[297,303,308,313,318,323,328,333],{"type":173,"tag":298,"props":299,"children":300},"li",{},[301],{"type":179,"value":302},"项目背景：目前的痛点是什么",{"type":173,"tag":298,"props":304,"children":305},{},[306],{"type":179,"value":307},"项目目标：希望达成什么",{"type":173,"tag":298,"props":309,"children":310},{},[311],{"type":179,"value":312},"衡量指标：关键指标是什么，如何衡量最终价值",{"type":173,"tag":298,"props":314,"children":315},{},[316],{"type":179,"value":317},"项目负责：谁对于最终目标负责",{"type":173,"tag":298,"props":319,"children":320},{},[321],{"type":179,"value":322},"项目人员：项目参与团队及人员",{"type":173,"tag":298,"props":324,"children":325},{},[326],{"type":179,"value":327},"项目范围：什么在范围内，什么不在",{"type":173,"tag":298,"props":329,"children":330},{},[331],{"type":179,"value":332},"时间规划：分哪几个阶段",{"type":173,"tag":298,"props":334,"children":335},{},[336],{"type":179,"value":337},"风险管理：项目风险及应对方式",{"type":173,"tag":181,"props":339,"children":341},{"id":340},"什么时候结项",[342],{"type":179,"value":343},"什么时候结项？",{"type":173,"tag":188,"props":345,"children":346},{},[347],{"type":179,"value":348},"如果项目目标在计划时间内得到实现，且能够在短时间内收集到业务数据辅助验证结果，那么就应该结项。项目收尾时应包括成果总结、经验复盘和文档沉淀：计划交付、实际交付与未交付的成果，经验教训、最佳实践，产品、运营和技术类文档，并总结为项目总结文档。",{"title":166,"searchDepth":350,"depth":350,"links":351},2,[352],{"id":176,"depth":350,"text":176},"markdown","