:173},"text",{"type":170,"tag":178,"props":179,"children":181},"h4",{"id":180},"模糊效果的实现",[182],{"type":176,"value":180},{"type":170,"tag":184,"props":185,"children":188},"aspect-ratio",{"h":186,"placeholder":187},"503px","TODO - \u003CArticle-G210206-BlurStandards />",[],{"type":170,"tag":190,"props":191,"children":192},"p",{},[193,195],{"type":176,"value":194},"如果打不开的话 P5.js 官网有个简单的示例：",{"type":170,"tag":196,"props":197,"children":201},"a",{"href":198,"rel":199},"https://editor.p5js.org/p5/sketches/Image:_Blur",[200],"nofollow",[202],{"type":176,"value":198},{"type":170,"tag":190,"props":204,"children":205},{},[206],{"type":176,"value":207},"原理非常简单，模糊后的像素的颜色由它旁边一些像素点的颜色决定。",{"type":170,"tag":190,"props":209,"children":210},{},[211],{"type":176,"value":212},"我这里使用的是最简单的计算方法，一个点的值由其相邻的八个像素点的值决定：",{"type":170,"tag":214,"props":215,"children":216},"table",{},[217,254],{"type":170,"tag":218,"props":219,"children":220},"thead",{},[221],{"type":170,"tag":222,"props":223,"children":224},"tr",{},[225,229,238,246],{"type":170,"tag":226,"props":227,"children":228},"th",{},[],{"type":170,"tag":226,"props":230,"children":231},{},[232],{"type":170,"tag":233,"props":234,"children":235},"strong",{},[236],{"type":176,"value":237},"x-1",{"type":170,"tag":226,"props":239,"children":240},{},[241],{"type":170,"tag":233,"props":242,"children":243},{},[244],{"type":176,"value":245},"x",{"type":170,"tag":226,"props":247,"children":248},{},[249],{"type":170,"tag":233,"props":250,"children":251},{},[252],{"type":176,"value":253},"x+1",{"type":170,"tag":255,"props":256,"children":257},"tbody",{},[258,283,307],{"type":170,"tag":222,"props":259,"children":260},{},[261,270,275,279],{"type":170,"tag":262,"props":263,"children":264},"td",{},[265],{"type":170,"tag":233,"props":266,"children":267},{},[268],{"type":176,"value":269},"y-1",{"type":170,"tag":262,"props":271,"children":272},{},[273],{"type":176,"value":274},"1/8",{"type":170,"tag":262,"props":276,"children":277},{},[278],{"type":176,"value":274},{"type":170,"tag":262,"props":280,"children":281},{},[282],{"type":176,"value":274},{"type":170,"tag":222,"props":284,"children":285},{},[286,294,298,303],{"type":170,"tag":262,"props":287,"children":288},{},[289],{"type":170,"tag":233,"props":290,"children":291},{},[292],{"type":176,"value":293},"y",{"type":170,"tag":262,"props":295,"children":296},{},[297],{"type":176,"value":274},{"type":170,"tag":262,"props":299,"children":300},{},[301],{"type":176,"value":302},"0",{"type":170,"tag":262,"props":304,"children":305},{},[306],{"type":176,"value":274},{"type":170,"tag":222,"props":308,"children":309},{},[310,318,322,326],{"type":170,"tag":262,"props":311,"children":312},{},[313],{"type":170,"tag":233,"props":314,"children":315},{},[316],{"type":176,"value":317},"y+1",{"type":170,"tag":262,"props":319,"children":320},{},[321],{"type":176,"value":274},{"type":170,"tag":262,"props":323,"children":324},{},[325],{"type":176,"value":274},{"type":170,"tag":262,"props":327,"children":328},{},[329],{"type":176,"value":274},{"type":170,"tag":190,"props":331,"children":332},{},[333],{"type":176,"value":334},"我们把某个像素点 (x,y) 附近的八个像素的值代入这个 3x3 表格中与乘积之和，得到的结果，就是模糊后应得的值。这个 3x3 表格也叫掩膜（Mask）。有一种类似原理的算法你们应该听过，叫做“高斯模糊”，只不过高斯模糊的掩膜的权重分配使用了高斯的正态分布函数。",{"type":170,"tag":178,"props":336,"children":338},{"id":337},"高斯模糊的原理是什么怎样在界面中实现",[339,345],{"type":170,"tag":340,"props":341,"children":344},"link",{"type":342,"source":343},"h5","https://www.zhihu.com/question/54918332/answer/142137732",[],{"type":176,"value":346},"《高斯模糊的原理是什么，怎样在界面中实现？》",{"type":170,"tag":190,"props":348,"children":349},{},[350],{"type":176,"value":351},"此回答介绍了高斯模糊算法中的一些优化点：",{"type":170,"tag":353,"props":354,"children":355},"ul",{},[356,362],{"type":170,"tag":357,"props":358,"children":359},"li",{},[360],{"type":176,"value":361},"可以使用两个一维高斯滤波替代二维滤波减少运算量",{"type":170,"tag":357,"props":363,"children":364},{},[365],{"type":176,"value":366},"可以使用查表法优化",{"type":170,"tag":171,"props":368,"children":370},{"id":369},"概念",[371],{"type":176,"value":369},{"type":170,"tag":171,"props":373,"children":375},{"id":374},"视错觉的形成原理",[376],{"type":176,"value":377},"视错觉的形成原理？",{"type":170,"tag":190,"props":379,"children":380},{},[381,383,396],{"type":176,"value":382},"神经科学告诉我们，注意力更像一层滤网，而不是探照灯。视觉（包括其它知觉）的形成并不是因为人被动的接受信息（感觉），而是外界信息传入后，脑内负责记忆、情感的神经网络主动参与到信息的解释中来。这也就意味着眼睛看到事物其实包含了两个阶段：一是物体发射或反射出的光进入眼睛，在视网膜上成像；二是光信号被视网膜上的细胞捕捉后，经由视觉神经网络传入大脑，大脑再对这些信号进行判断和解读 ",{"type":170,"tag":384,"props":385,"children":386},"sup",{},[387],{"type":170,"tag":196,"props":388,"children":393},{"href":389,"ariaDescribedBy":390,"dataFootnoteRef":163,"id":392},"#user-content-fn-theory",[391],"footnote-label","user-content-fnref-theory",[394],{"type":176,"value":395},"1",{"type":176,"value":397},"。",{"type":170,"tag":399,"props":400,"children":401},"blockquote",{},[402],{"type":170,"tag":190,"props":403,"children":404},{},[405,407],{"type":176,"value":406},"观看从一开始就是有选择的，眼睛对样本做出什么反应，取决于许多生理与心理因素。\n",{"type":170,"tag":408,"props":409,"children":410},"name",{},[411],{"type":176,"value":412},"贡布里希",{"type":170,"tag":190,"props":414,"children":415},{},[416],{"type":176,"value":417},"物理性错视：色彩的膨胀感、进退感、冷暖感、轻重感。",{"type":170,"tag":190,"props":419,"children":420},{},[421],{"type":176,"value":422},"由于眼球的上、下运动比左、右运动困难，因而容易疲倦 ；因为疲倦 ，也就觉得上下的距离要比左右的更长了。",{"type":170,"tag":353,"props":424,"children":425},{},[426,431],{"type":170,"tag":357,"props":427,"children":428},{},[429],{"type":176,"value":430},"将两条长短相等的直线垂直摆放，垂线要比水平线略显得略长。",{"type":170,"tag":357,"props":432,"children":433},{},[434],{"type":176,"value":435},"徒手画个正方形，是个横向扁长的长方形；标准的正方形倒是看起来竖向扁长。",{"type":170,"tag":190,"props":437,"children":438},{},[439],{"type":176,"value":440},"神经信号的传递并不是像机械电路般“一电到底”：信号在神经细胞传递是依靠生物电，但在神经细胞间的传递则需要依靠物理系统的突触结构。突出结构间产生的物质并不一定会被即刻销毁，所以兴奋的神经网络会产生痕迹效应，也就导致了视觉残像。同时，因为神经细胞兴奋会引起“疲劳”，所以对响应的色彩敏感度也会降低，这导致了补色残像的发生。",{"type":170,"tag":190,"props":442,"children":443},{},[444],{"type":176,"value":445},"错觉的分类：",{"type":170,"tag":353,"props":447,"children":448},{},[449,454,459,464,469,474],{"type":170,"tag":357,"props":450,"children":451},{},[452],{"type":176,"value":453},"角度或方向的错视",{"type":170,"tag":357,"props":455,"children":456},{},[457],{"type":176,"value":458},"分割的错视",{"type":170,"tag":357,"props":460,"children":461},{},[462],{"type":176,"value":463},"对比的错视",{"type":170,"tag":357,"props":465,"children":466},{},[467],{"type":176,"value":468},"垂直水平的错视",{"type":170,"tag":357,"props":470,"children":471},{},[472],{"type":176,"value":473},"上方距离过大错视",{"type":170,"tag":357,"props":475,"children":476},{},[477],{"type":176,"value":478},"反转性实体错视",{"type":170,"tag":190,"props":480,"children":481},{},[482,484,495],{"type":176,"value":483},"错视图形的作用可以总结为：增强艺术作品的感染力，增强画面趣味性，增强画面空间想象；其表现手法则大致可分为：图底反转、矛盾空间、图形同构 ",{"type":170,"tag":384,"props":485,"children":486},{},[487],{"type":170,"tag":196,"props":488,"children":492},{"href":489,"ariaDescribedBy":490,"dataFootnoteRef":163,"id":491},"#user-content-fn-express-methods",[391],"user-content-fnref-express-methods",[493],{"type":176,"value":494},"2",{"type":176,"value":397},{"type":170,"tag":190,"props":497,"children":498},{},[499,501,512],{"type":176,"value":500},"人们在观察一个图形时，我们的视知觉往往会把包围且封闭的部分归结为图，而把未包围的部分看成底，部分情况下也有把大面积的部分看为底，积的部分看为图 ",{"type":170,"tag":384,"props":502,"children":503},{},[504],{"type":170,"tag":196,"props":505,"children":509},{"href":506,"ariaDescribedBy":507,"dataFootnoteRef":163,"id":508},"#user-content-fn-reversal-theory",[391],"user-content-fnref-reversal-theory",[510],{"type":176,"value":511},"3",{"type":176,"value":397},{"type":170,"tag":190,"props":514,"children":515},{},[516],{"type":176,"value":517},"矛盾空间的形成原因是图案违反了现实的透视原理。",{"type":170,"tag":190,"props":519,"children":520},{},[521],{"type":176,"value":522},"同构图形即将事物转化成一种新的形象。",{"type":170,"tag":524,"props":525,"children":528},"section",{"className":526,"dataFootnotes":163},[527],"footnotes",[529,536],{"type":170,"tag":171,"props":530,"children":533},{"className":531,"id":391},[532],"sr-only",[534],{"type":176,"value":