ags":394,"body":403,"_type":1138,"_id":1139,"_source":1140,"_file":1141,"_extension":1142},"/maps/_workflow/package-manager","_workflow",false,true,"","包管理器","用于管理项目依赖的工具",[395,396,397,398,399,400,401,402],"package-manager","npm","pnpm","yarn","tnpm","corepack","lockfile","dependencies",{"type":404,"children":405,"toc":1133},"root",[406,414,444,449,455,507,514,519,527,533,538,572,578,592,598,612,618,623,631,636,642,647,686,692,711,798,810,816,821,835,840,848,871,879,898,906,952,972,978,983,1101,1107,1112,1127],{"type":407,"tag":408,"props":409,"children":411},"element","h2",{"id":410},"包管理器或二次概念",[412],{"type":413,"value":410},"text",{"type":407,"tag":415,"props":416,"children":417},"ul",{},[418,428,436],{"type":407,"tag":419,"props":420,"children":421},"li",{},[422],{"type":407,"tag":423,"props":424,"children":426},"a",{"href":425},"/maps/_workflow/package-manager/npm",[427],{"type":413,"value":396},{"type":407,"tag":419,"props":429,"children":430},{},[431],{"type":407,"tag":423,"props":432,"children":434},{"href":433},"/maps/_workflow/package-manager/pnpm",[435],{"type":413,"value":397},{"type":407,"tag":419,"props":437,"children":438},{},[439],{"type":407,"tag":423,"props":440,"children":442},{"href":441},"/maps/_workflow/package-manager/lockfile",[443],{"type":413,"value":401},{"type":407,"tag":408,"props":445,"children":447},{"id":446},"发展历程",[448],{"type":413,"value":446},{"type":407,"tag":450,"props":451,"children":452},"p",{},[453],{"type":413,"value":454},"推荐阅读：",{"type":407,"tag":415,"props":456,"children":457},{},[458,471,483,495],{"type":407,"tag":419,"props":459,"children":460},{},[461,469],{"type":407,"tag":423,"props":462,"children":466},{"href":463,"rel":464},"https://zhuanlan.zhihu.com/p/137535779",[465],"nofollow",[467],{"type":413,"value":468},"node_modules 困境",{"type":413,"value":470},"，除了 NodeJS 生态，文章还介绍了 Rust 是如何进行包管理的。",{"type":407,"tag":419,"props":472,"children":473},{},[474,481],{"type":407,"tag":423,"props":475,"children":478},{"href":476,"rel":477},"https://mp.weixin.qq.com/s/t6RZAKb6mXTfXl7XbpZ_vw",[465],[479],{"type":413,"value":480},"关于依赖管理的真相—前端包管理器探究",{"type":413,"value":482},"，文章对 NodeJS 中各新老包管理器逐个点了名，还简单提及了 Deno 中的包管理。",{"type":407,"tag":419,"props":484,"children":485},{},[486,493],{"type":407,"tag":423,"props":487,"children":490},{"href":488,"rel":489},"https://zhuanlan.zhihu.com/p/455809528",[465],[491],{"type":413,"value":492},"深入浅出 tnpm rapid 模式-如何比 pnpm 快 10 秒",{"type":413,"value":494},"，大综述。",{"type":407,"tag":419,"props":496,"children":497},{},[498,505],{"type":407,"tag":423,"props":499,"children":502},{"href":500,"rel":501},"https://www.zhihu.com/zvideo/1467489669319036928",[465],[503],{"type":413,"value":504},"一种秒级安装 npm 的方式",{"type":413,"value":506},"，更详细地介绍了 tnpm Rapid 的工作原理。",{"type":407,"tag":508,"props":509,"children":511},"h4",{"id":510},"古早的-npm-是怎么管理依赖的",[512],{"type":413,"value":513},"古早的 NPM 是怎么管理依赖的？",{"type":407,"tag":450,"props":515,"children":516},{},[517],{"type":413,"value":518},"早期 NPM（V1、V2） 使用原始的嵌套模式来管理依赖，没有使用优化策略，所以带来了依赖地狱和多版本共存的问题。",{"type":407,"tag":415,"props":520,"children":521},{},[522],{"type":407,"tag":419,"props":523,"children":524},{},[525],{"type":413,"value":526},"依赖地狱：依赖路径过长、占用空间过大、安装缓慢。",{"type":407,"tag":508,"props":528,"children":530},{"id":529},"npm-v3-带来了哪些改进",[531],{"type":413,"value":532},"NPM V3 带来了哪些改进？",{"type":407,"tag":450,"props":534,"children":535},{},[536],{"type":413,"value":537},"NPM V3 开始，使用扁平模式管理依赖，把重复依赖提升到 node_modules 一级目录，缓解了依赖地狱的问题，但却引入了幽灵依赖、多重依赖和不确定性等问题。",{"type":407,"tag":415,"props":539,"children":540},{},[541,552,562],{"type":407,"tag":419,"props":542,"children":543},{},[544,550],{"type":407,"tag":545,"props":546,"children":547},"strong",{},[548],{"type":413,"value":549},"幽灵依赖",{"type":413,"value":551},"：如果某依赖不是包本身的依赖但是被提升到了一级目录，那么就能在代码中引入。",{"type":407,"tag":419,"props":553,"children":554},{},[555,560],{"type":407,"tag":545,"props":556,"children":557},{},[558],{"type":413,"value":559},"多重依赖",{"type":413,"value":561},"：首先，依赖的某版本已经提升了，却不会影响其它依赖共同依赖它的其它版本，所以还是存在多重依赖的问题；其次，由于 NodeJS 的 require 的缓存规则是按照文件名及路径而不是模块名，此时对依赖进行有副作用的修改会破环单例模式；再者不同版本依赖的 types 可能会冲突。",{"type":407,"tag":419,"props":563,"children":564},{},[565,570],{"type":407,"tag":545,"props":566,"children":567},{},[568],{"type":413,"value":569},"不确定性",{"type":413,"value":571},"：手动安装依赖可能会带来和 npm install 安装后不同的结构。",{"type":407,"tag":508,"props":573,"children":575},{"id":574},"yarn-的-pnp-模式是什么",[576],{"type":413,"value":577},"yarn 的 PnP 模式是什么？",{"type":407,"tag":450,"props":579,"children":580},{},[581,583,590],{"type":413,"value":582},"Yarn（V2）带来一种独特的依赖安装模式：",{"type":407,"tag":423,"props":584,"children":587},{"href":585,"rel":586},"https://yarnpkg.com/features/pnp",[465],[588],{"type":413,"value":589},"PnP（Plug'n'Play）",{"type":413,"value":591},"，它在项目中使用 .pnp.cjs 文件来缓存各模块及其位置的关系。这样一来，所有依赖都可以被统一管理，极大减少了安装依赖时 IO 操作。",{"type":407,"tag":508,"props":593,"children":595},{"id":594},"pnpm-解决了什么问题",[596],{"type":413,"value":597},"pnpm 解决了什么问题？",{"type":407,"tag":450,"props":599,"children":600},{},[601,603,610],{"type":413,"value":602},"2017 年，pnpm V1 通过统一依赖管理以及创建系统链接的方法一举解决了幽灵依赖和多重依赖的问题。所有项目的依赖都被统一安装到了磁盘特定位置。即使多个项目中用到相同的依赖也只会安装一次。此外，项目中的 node_modules 文件夹仍然是 ",{"type":407,"tag":423,"props":604,"children":607},{"href":605,"rel":606},"https://www.pnpm.cn/blog/2020/05/27/flat-node-modules-is-not-the-only-way",[465],[608],{"type":413,"value":609},"结构化的",{"type":413,"value":611},"，所以比 PnP 有更好的兼容性。",{"type":407,"tag":508,"props":613,"children":615},{"id":614},"tnpm-的主要思路是什么",[616],{"type":413,"value":617},"tnpm 的主要思路是什么？",{"type":407,"tag":450,"props":619,"children":620},{},[621],{"type":413,"value":622},"tnpm 想给包管理工具提供一套方案，以解决所有恼人的问题。在网络端，使用服务器来生成依赖树，节约请求；在表示层，将 tgz 文件合并写入 tar，节约写入次数；在 IO 层，使用 Rust 完成 IO 操作性优于 NodeJS；在系统层，使用 FUSE 文件系统，省去文件解压操作。",{"type":407,"tag":450,"props":624,"children":625},{},[626],{"type":407,"tag":627,"props":628,"children":630},"img",{"alt":399,"src":629},"https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/20220318001222.png",[],{"type":407,"tag":408,"props":632,"children":634},{"id":633},"常见问题",[635],{"type":413,"value":633},{"type":407,"tag":508,"props":637,"children":639},{"id":638},"包管理器差异",[640],{"type":413,"value":641},"包管理器差异？",{"type":407,"tag":450,"props":643,"children":644},{},[645],{"type":413,"value":646},"peerDependencies：",{"type":407,"tag":415,"props":648,"children":649},{},[650,662,674],{"type":407,"tag":419,"props":651,"children":652},{},[653,655],{"type":413,"value":654},"npm v3 ~ v6 不会自动安装 peerDependencies，见：",{"type":407,"tag":423,"props":656,"children":659},{"href":657,"rel":658},"https://docs.npmjs.com/cli/v8/configuring-npm/package-json#peerdependencies",[465],[660],{"type":413,"value":661},"peerDependencies | npm",{"type":407,"tag":419,"props":663,"children":664},{},[665,667],{"type":413,"value":666},"npm v6.x 没有考虑 peerDependencies 的依赖结构，容易在用户安装了和 peerDepend 的包的不同版本号的依赖时导致问题，见：",{"type":407,"tag":423,"props":668,"children":671},{"href":669,"rel":670},"https://zhuanlan.zhihu.com/p/237532427",[465],[672],{"type":413,"value":673},"npm 与 yarn 对 peerDependencies 处理的差异 | 张立理",{"type":407,"tag":419,"props":675,"children":676},{},[677,679],{"type":413,"value":678},"pnpm 有特殊处理，见 ",{"type":407,"tag":423,"props":680,"children":683},{"href":681,"rel":682},"https://pnpm.io/how-peers-are-resolved",[465],[684],{"type":413,"value":685},"How peers are resolved | pnpm",{"type":407,"tag":508,"props":687,"children":689},{"id":688},"如何锁定包管理器",[690],{"type":413,"value":691},"如何锁定包管理器？",{"type":407,"tag":693,"props":694,"children":695},"ol",{},[696,701,706],{"type":407,"tag":419,"props":697,"children":698},{},[699],{"type":413,"value":700},"可以使用脚本判断环境变量中的 npm_execpath 或者 npm_config_user_agent，分别根据执行指令的包管理器具体路径、执行指令的包管理器具体版本（Vue3 和 Vite 分别使用了这两种办法限制特定的包管理器）。",{"type":407,"tag":419,"props":702,"children":703},{},[704],{"type":413,"value":705},"使用 only-allow 包（Vite 使用这种方法）。",{"type":407,"tag":419,"props":707,"children":708},{},[709],{"type":413,"value":710},"使用 Corepack 锁定包管理器"