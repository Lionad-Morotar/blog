[{"data":1,"prerenderedAt":995},["ShallowReactive",2],{"navigation":3,"/maps/_business/business-analysis":164,"/maps/_business/business-analysis-surround":986},[4,35,95,101,128,134,158],{"title":5,"_path":6,"children":7},"心流思绪 / Heart Flows","/flows",[8,11,14,17,20,23,26,29,32],{"title":9,"_path":10},"📕 狮子的书单推荐","/flows/books",{"title":12,"_path":13},"🚝 四十二篇系列","/flows/fourty-two",{"title":15,"_path":16},"🌃 长夜梦","/flows/long-night-dream",{"title":18,"_path":19},"🌌 万物联结与幸福感","/flows/everything",{"title":21,"_path":22},"⌛ 偷取时间","/flows/stealing-time-from-god",{"title":24,"_path":25},"🌆 表达和孤独","/flows/expression-and-loneliness",{"title":27,"_path":28},"🌧️ 我的腼腆","/flows/shy",{"title":30,"_path":31},"🥛 新工作，喝新饮料","/flows/drinking-while-thinking",{"title":33,"_path":34},"📝 心流归档","/flows/archive",{"title":36,"_path":37,"children":38},"技术博客 / Coder","/articles",[39,41,44,47,50,53,56,59,62,65,68,71,74,77,80,83,86,89,92],{"title":40,"_path":37},"🦁 欢迎",{"title":42,"_path":43},"🖌️ Blockies Animation","/maps/_fe-framework/motion/blockies-animation",{"title":45,"_path":46},"📦 一个简单有效的端口命名策略：","/articles/simple-naming-method",{"title":48,"_path":49},"🌪️ Tailwind v4 如何兼容预处理器","/articles/tailwind4-with-sass",{"title":51,"_path":52},"🥞 在 tailwind 中使用现代化 CSS Layers","/articles/tailwind-sass-and-css-layer",{"title":54,"_path":55},"💻 本地部署 Qwen 翻译网页","/articles/local-translator",{"title":57,"_path":58},"🧊 模板解析器轻考古","/articles/micro-templating",{"title":60,"_path":61},"Ⓜ️ Mini CSS Parser","/articles/mini-css-parser",{"title":63,"_path":64},"🚩 向AI咨询前端问题","/articles/use-gpt-learn-complex-frontend",{"title":66,"_path":67},"⛸️ 怎样定制复杂组件的自定义滚动条？","/articles/use-scrollbars",{"title":69,"_path":70},"⚖️ 统一多组件库的层叠顺序","/articles/zindex-manager",{"title":72,"_path":73},"🕷️ 滑动验证码破解思路","/articles/crack-the-slider",{"title":75,"_path":76},"🌟 探秘 CSS 光影效果","/articles/css-light-travel",{"title":78,"_path":79},"🍲 设计模式与 JS 魔法锅","/articles/design-patterns-and-js-magic-pot",{"title":81,"_path":82},"🌐 Anysort：灵活、优雅的多属性排序","/articles/anysort-2th",{"title":84,"_path":85},"💫 CSS 幻术 | 抗锯齿","/articles/css-poaa",{"title":87,"_path":88},"❓ 用纯CSS判断鼠标进入的方向","/articles/css-judge-direction",{"title":90,"_path":91},"📝 你本可以少写些 if-else","/articles/no-more-if-else",{"title":93,"_path":94},"📝 技术博客归档","/articles/archive",{"title":96,"_path":97,"children":98},"读书笔记 / Notes","/books",[99],{"title":100,"_path":97},"📕 读书笔记",{"title":102,"_path":103,"children":104},"吉他剧场 / Music","/music",[105,107,110,113,116,119,122,125],{"title":106,"_path":103},"🎸 FingerStyle！",{"title":108,"_path":109},"🌬️ 等待的风","/music/wind",{"title":111,"_path":112},"💕 约定的海洋","/music/ocean",{"title":114,"_path":115},"🎼 Wings~You are the Hero！","/music/wings-you-are-the-hero",{"title":117,"_path":118},"🌏 残酷天使的行动纲领","/music/eva",{"title":120,"_path":121},"🏔️ 奇跡の山","/music/miracle-mountain",{"title":123,"_path":124},"🍷 Wu Wei","/music/wu-wei",{"title":126,"_path":127},"🌅 无题","/music/untitled",{"title":129,"_path":130,"children":131},"知识地图 / Maps","/maps",[132],{"title":133,"_path":130},"🏁 知识地图",{"title":135,"_path":136,"children":137},"造物 / Make","/tools",[138,140,143,146,149,152,155],{"title":139,"_path":136},"🧰 工具收集",{"title":141,"_path":142},"📕 博客","/tools/blog",{"title":144,"_path":145},"🥥 Coconut","/tools/coconut",{"title":147,"_path":148},"🧶 网易云音乐歌单排序","/tools/netease-sorter",{"title":150,"_path":151},"🌐 AnySort","/tools/anysort",{"title":153,"_path":154},"⛸️ UseScrollbar","/tools/use-scrollbar",{"title":156,"_path":157},"👓 Crapto","/tools/crypto-inline",{"title":159,"_path":160,"children":161},"我 / About","/hire",[162],{"title":163,"_path":160},"📬 技术简历",{"_path":165,"_dir":166,"_draft":167,"_partial":168,"_locale":169,"title":170,"description":171,"body":172,"_type":980,"_id":981,"_source":982,"_file":983,"_stem":984,"_extension":985},"/maps/_business/business-analysis","_business",false,true,"","商业分析","商业分析是指通过拆解问题、分析需求、设计解决方案，为业务开展提供更好的数据和决策支持的过程。",{"type":173,"children":174,"toc":970},"root",[175,183,190,196,201,207,212,232,237,243,248,257,263,268,301,307,312,335,340,346,362,371,376,382,387,392,398,403,417,422,428,433,439,444,467,473,478,522,527,550,556,561,566,572,585,590,595,601,606,611,616,621,627,632,637,642,647,652,658,691,697,702,707,712,718,723,728,751,757,762,767,773,778,801,806,812,817,822,828,833,839,844,862,868,873,878,884,889,907,919,924,935,942,947],{"type":176,"tag":177,"props":178,"children":180},"element","h2",{"id":179},"模型",[181],{"type":182,"value":179},"text",{"type":176,"tag":184,"props":185,"children":187},"h4",{"id":186},"什么是非共识机会",[188],{"type":182,"value":189},"什么是非共识机会？",{"type":176,"tag":191,"props":192,"children":193},"p",{},[194],{"type":182,"value":195},"非共识机会是指那些在当时尚未被广泛认可或理解，但经过深入分析和独特视角发现的潜在机会或创新点。这种机会往往因为不符合传统思维、行业惯例或主流认知，而被大多数人忽视或误解。然而，一旦被正确识别和把握，非共识机会可能会带来巨大的成功和突破。",{"type":176,"tag":191,"props":197,"children":198},{},[199],{"type":182,"value":200},"举例如：《PUBG》这种玩法的游戏在大逃杀电影火了数十年后才展现爆火的趋势，它的游戏玩法看似违背了退出机制，传播方式也并非传统的通过平台广告推广，实则玩法和推广都是非共识机会。",{"type":176,"tag":184,"props":202,"children":204},{"id":203},"什么是三级火箭理论",[205],{"type":182,"value":206},"什么是三级火箭理论？",{"type":176,"tag":191,"props":208,"children":209},{},[210],{"type":182,"value":211},"三级火箭理论通过不同层级的业务协同，逐级放大势能，最终形成商业闭环。",{"type":176,"tag":213,"props":214,"children":215},"ul",{},[216,222,227],{"type":176,"tag":217,"props":218,"children":219},"li",{},[220],{"type":182,"value":221},"第一级：用高频/免费服务突破流量瓶颈。",{"type":176,"tag":217,"props":223,"children":224},{},[225],{"type":182,"value":226},"第二级：通过会员、垂直服务提升用户粘性，构建使用场景，形成生态壁垒。",{"type":176,"tag":217,"props":228,"children":229},{},[230],{"type":182,"value":231},"第三级：通过广告及其他如增值服务，在生态位中捕获超额价值。",{"type":176,"tag":177,"props":233,"children":235},{"id":234},"分析框架",[236],{"type":182,"value":234},{"type":176,"tag":184,"props":238,"children":240},{"id":239},"如何使用价值链价值流分析企业能力",[241],{"type":182,"value":242},"如何使用价值链（价值流）分析企业能力？",{"type":176,"tag":191,"props":244,"children":245},{},[246],{"type":182,"value":247},"价值链是企业管理领域里的一个有效的分析模型，可以综合描述企业的价值创造过程。这个过程可以抽象为：客户洞察、产品设计、产品实施与服务、产品改进这四个环节，而围绕这基本活动的是企业支撑活动，包含基础研究、环境研究、生态运营、知识管理、组织和人力、价值核算这六个环节。分析企业能力，也就是描述如何从企业基本活动和支撑活动中，给用户带来价值。参考付晓岩的价值流图，还可以结合市场、基础设施、社会文化等综合考虑。",{"type":176,"tag":191,"props":249,"children":250},{},[251],{"type":176,"tag":252,"props":253,"children":256},"img",{"alt":254,"src":255},"价值流图","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/202503140420447.png",[],{"type":176,"tag":184,"props":258,"children":260},{"id":259},"业务应该如何定位",[261],{"type":182,"value":262},"业务应该如何定位？",{"type":176,"tag":191,"props":264,"children":265},{},[266],{"type":182,"value":267},"有许多维度可以帮助企业定位自己的业务，以下给出一些参考。",{"type":176,"tag":213,"props":269,"children":270},{},[271,276,281,286,291,296],{"type":176,"tag":217,"props":272,"children":273},{},[274],{"type":182,"value":275},"价值创造方式：产品驱动、服务驱动、平台驱动。产品驱动的核心竞争力在于实体/数字产品的研发与迭代，服务驱动依赖专业服务能力与客户关系管理，平台驱动则依赖于生态建设与规模效应形成的多边市场。三者代表性产品有苹果、麦肯锡、滴滴。",{"type":176,"tag":217,"props":277,"children":278},{},[279],{"type":182,"value":280},"客户关系：2B、2C、2G 等，不同客户关系有不用侧重点。",{"type":176,"tag":217,"props":282,"children":283},{},[284],{"type":182,"value":285},"关系深度：交易型、周期型、合约型等。交易性如零售，重流量获取效率，客户粘性低；周期型如保险，需要保证内容更新节奏，重点考核续费率，此方法有较高 LTV；合约型多见于传统行业，如电信业务通过数年合约绑定用户，定制化程度较高。",{"type":176,"tag":217,"props":287,"children":288},{},[289],{"type":182,"value":290},"技术渗透程度：传统行业、科技增强、原生数字，分别对应如传统制造业、平安智能投顾、元宇宙社交平台。",{"type":176,"tag":217,"props":292,"children":293},{},[294],{"type":182,"value":295},"市场覆盖策略：大众市场、细分市场、垂直市场，长尾市场。大众市场如 QQ、微信，细分市场如知乎、豆瓣，垂直市场如猎聘、猎豹，长尾市场如各类电子书付费。",{"type":176,"tag":217,"props":297,"children":298},{},[299],{"type":182,"value":300},"价值链位置：上游、中游、下游，分别对应如供应商、制造商、零售商。在传统行业里，上游企业控制核心生产要素，中游企业控制核心技术，下游企业掌握终端触达能力。上下游企业一般面临强监管风险，而约束中游企业生产规范的标准一般不轻易改变。",{"type":176,"tag":184,"props":302,"children":304},{"id":303},"如何看待外部新赛道业务",[305],{"type":182,"value":306},"如何看待外部新赛道业务？",{"type":176,"tag":191,"props":308,"children":309},{},[310],{"type":182,"value":311},"企业进入新赛道将在机会面前进行着资源、战略、风险、时机的多维博弈。",{"type":176,"tag":213,"props":313,"children":314},{},[315,320,325,330],{"type":176,"tag":217,"props":316,"children":317},{},[318],{"type":182,"value":319},"资源：财务、人才等技术资源是否充裕，匆忙投入新赛道将带来现金流压力等新问题，压缩原有业务发展空间。",{"type":176,"tag":217,"props":321,"children":322},{},[323],{"type":182,"value":324},"战略：新业务是否处于核心战略方向，是否能够和现有业务形成协同效应，而不是与原生态位形成对冲。",{"type":176,"tag":217,"props":326,"children":327},{},[328],{"type":182,"value":329},"风险：通过计算盈利周期、市场规模、政策风向能大致评估风险，计算风险回报比，以此为依据决定是否跟进。",{"type":176,"tag":217,"props":331,"children":332},{},[333],{"type":182,"value":334},"时机：通过技术成熟度曲线、市场规模曲线、竞争态势曲线等，判断是否是最佳进入时机。",{"type":176,"tag":191,"props":336,"children":337},{},[338],{"type":182,"value":339},"从美团退出与重入充电宝业务来看，2017 年的充电宝业务市场规模大，但实现方法尚不明确，盈利模式尚未被验证，不是最佳进入时机，所以美团选择在试点后选择退出。2020 年卷土重来时，租赁模式的盈利能力已经得到”三电一兽“验证，再加上美团视充电宝业务为核心业务的扩展，能起增加 APP 日活的协同效应，再加上在资源面能有效利用现有地推团队降低成本，所以再次进入充电宝业务是一个明智的选择。",{"type":176,"tag":184,"props":341,"children":343},{"id":342},"如何从用户规模分析业务可行性",[344],{"type":182,"value":345},"如何从用户规模分析业务可行性？",{"type":176,"tag":191,"props":347,"children":348},{},[349,351,360],{"type":182,"value":350},"在朱时雨的 ",{"type":176,"tag":352,"props":353,"children":357},"a",{"href":354,"rel":355},"https://mp.weixin.qq.com/s/lc5i1Pz6LXiI6kokTp_9lQ",[356],"nofollow",[358],{"type":182,"value":359},"《会有小而美的事情发生吗？》",{"type":182,"value":361}," 提出了将用户分层的需求二八法则。",{"type":176,"tag":363,"props":364,"children":365},"blockquote",{},[366],{"type":176,"tag":191,"props":367,"children":368},{},[369],{"type":182,"value":370},"同一个需求对用户是二八分层，同一类群体对需求也是二八分层，因此可以得到一个不同群体和不同需求的四象限乘积，以此判断什么是刚性需求，什么是小众需求以及什么是伪需求。",{"type":176,"tag":191,"props":372,"children":373},{},[374],{"type":182,"value":375},"以内容应用为例，一般而言，80%用户的 80%需求属于高频的大众需求，比如今日头条；20%用户的 80%需求属于优质需求，比如知乎、得到；80%用户的 20%需求垂直领域需求，比如猎聘、最右；剩下的 20%用户的 20%需求是小众需求，比如博客平台。",{"type":176,"tag":184,"props":377,"children":379},{"id":378},"如何判断两条业务的协同作用",[380],{"type":182,"value":381},"如何判断两条业务的协同作用？",{"type":176,"tag":191,"props":383,"children":384},{},[385],{"type":182,"value":386},"业务协同其实是资源整合的结果，如整合人力、技术、资金、渠道等，以降本增效。整合过程一般会以”基石”业务上进行延伸，以保证执行过程有主有次，不至于资源过于分散。",{"type":176,"tag":191,"props":388,"children":389},{},[390],{"type":182,"value":391},"以美元发展外卖业务举例，美团主打“本地生活服务”，早期是团购、电影票以及酒店业务等以到店业务为核心的业务。但无论是白领还是学生，总有一段时间是不出门的，这时需要考虑如何配合线下门店，提供外卖服务，来完成业务链。用雄峰的话来说，团购是让消费者出门消费，外卖是让消费者在家消费，团购是满足消费者省钱的需求，外卖是满足消费者便利的需求，团购是解决商家短期营销需求，外卖是解决商家长期销售需求。",{"type":176,"tag":184,"props":393,"children":395},{"id":394},"如何看待商业战争的你追我赶",[396],{"type":182,"value":397},"如何看待商业战争的你追我赶？",{"type":176,"tag":191,"props":399,"children":400},{},[401],{"type":182,"value":402},"打法不同，各凭本事。",{"type":176,"tag":363,"props":404,"children":405},{},[406],{"type":176,"tag":191,"props":407,"children":408},{},[409,411],{"type":182,"value":410},"我们通常不是先研究对手，而是先研究市场，形成自己对于市场空间的判断和认知，先找到先入场玩家的致命错误，再给出“修正版”的商业模式，并努力让自己不犯致命错误。\n",{"type":176,"tag":412,"props":413,"children":414},"name",{},[415],{"type":182,"value":416},"王慧文",{"type":176,"tag":177,"props":418,"children":420},{"id":419},"商业洞察",[421],{"type":182,"value":419},{"type":176,"tag":184,"props":423,"children":425},{"id":424},"什么是商业洞察",[426],{"type":182,"value":427},"什么是商业洞察？",{"type":176,"tag":191,"props":429,"children":430},{},[431],{"type":182,"value":432},"商业洞察能力是在复杂商业环境中穿透表象，理清行业各要素之间的结构关系，找到模型和规律优化产品，并预判未来趋势的战略性思维能力。",{"type":176,"tag":184,"props":434,"children":436},{"id":435},"互联网相较传统行业的特点",[437],{"type":182,"value":438},"互联网相较传统行业的特点？",{"type":176,"tag":191,"props":440,"children":441},{},[442],{"type":182,"value":443},"互联网有几个经典的特点：",{"type":176,"tag":213,"props":445,"children":446},{},[447,452,457,462],{"type":176,"tag":217,"props":448,"children":449},{},[450],{"type":182,"value":451},"轻资产化：互联网公司的资产主要是人才和技术，而非土地、厂房等实体资产。这就带来了极易扩张、降低边际成本的特点。",{"type":176,"tag":217,"props":453,"children":454},{},[455],{"type":182,"value":456},"流量垄断：互联网应用汇聚了海量的用户数据，极易通过数据分析、算法优化等手段形成二次创值，进而形成垄断趋势。所以能带来数据的流量本身就具有巨大的商业价值。",{"type":176,"tag":217,"props":458,"children":459},{},[460],{"type":182,"value":461},"薄技术层：和传统企业相比，互联网企业能有效利用信息不对称的优势，去除中间环节提高效率。同时，如果没有显著的技术壁垒，非常容易被其他企业赶超。",{"type":176,"tag":217,"props":463,"children":464},{},[465],{"type":182,"value":466},"重视服务：相比传统企业，互联网时代的新兴技术能在很短时间落地，对 C 端用户而言，新技术赋能服务，能提高用户体验。",{"type":176,"tag":184,"props":468,"children":470},{"id":469},"生鲜电商能如何分类",[471],{"type":182,"value":472},"生鲜电商能如何分类？",{"type":176,"tag":191,"props":474,"children":475},{},[476],{"type":182,"value":477},"按供应链可分为：",{"type":176,"tag":213,"props":479,"children":480},{},[481,492,502,512],{"type":176,"tag":217,"props":482,"children":483},{},[484,490],{"type":176,"tag":485,"props":486,"children":487},"strong",{},[488],{"type":182,"value":489},"店仓一体",{"type":182,"value":491},"：如盒马，线下门店作为零售，也支持仓储。",{"type":176,"tag":217,"props":493,"children":494},{},[495,500],{"type":176,"tag":485,"props":496,"children":497},{},[498],{"type":182,"value":499},"前置仓",{"type":182,"value":501},"：如早期每日优鲜，在城市内网格化布点，实现 30 分钟~1 小时内配送服务。",{"type":176,"tag":217,"props":503,"children":504},{},[505,510],{"type":176,"tag":485,"props":506,"children":507},{},[508],{"type":182,"value":509},"中心仓",{"type":182,"value":511},"：如京东生鲜、天猫超市，主打性价比产品 + 次日达服务。",{"type":176,"tag":217,"props":513,"children":514},{},[515,520],{"type":176,"tag":485,"props":516,"children":517},{},[518],{"type":182,"value":519},"产地直采",{"type":182,"value":521},"：如天天果园，主打产地直发，保证新鲜。",{"type":176,"tag":191,"props":523,"children":524},{},[525],{"type":182,"value":526},"也可按流量入口划分：",{"type":176,"tag":213,"props":528,"children":529},{},[530,540],{"type":176,"tag":217,"props":531,"children":532},{},[533,538],{"type":176,"tag":485,"props":534,"children":535},{},[536],{"type":182,"value":537},"会员制",{"type":182,"value":539},"：如 Costco，山姆会员店。",{"type":176,"tag":217,"props":541,"children":542},{},[543,548],{"type":176,"tag":485,"props":544,"children":545},{},[546],{"type":182,"value":547},"线上引流",{"type":182,"value":549},"：如滴滴团购、美团、百度糯米、大众点评等。",{"type":176,"tag":184,"props":551,"children":553},{"id":552},"补贴模式的优劣势",[554],{"type":182,"value":555},"补贴模式的优劣势？",{"type":176,"tag":191,"props":557,"children":558},{},[559],{"type":182,"value":560},"补贴可以快速培养用户习惯和扩大市场份额，但如果无法在行业中迅速形成单一龙头企业，补贴大战就会陷入无止境的恶性竞争，同时引发监管或其他政策上的风险。",{"type":176,"tag":177,"props":562,"children":564},{"id":563},"案例分析",[565],{"type":182,"value":563},{"type":176,"tag":184,"props":567,"children":569},{"id":568},"为什么第一性原理备受马斯克推崇",[570],{"type":182,"value":571},"为什么第一性原理备受马斯克推崇？",{"type":176,"tag":363,"props":573,"children":574},{},[575],{"type":176,"tag":191,"props":576,"children":577},{},[578,580],{"type":182,"value":579},"“每个系统中存在一个最基本的逻辑，它不能够被违背或删除”\n",{"type":176,"tag":412,"props":581,"children":582},{},[583],{"type":182,"value":584},"亚里士多德",{"type":176,"tag":191,"props":586,"children":587},{},[588],{"type":182,"value":589},"以前会以为第一性原理是某种还原主义，但后来才发现它在特定项目才能发挥作用。比如猎鹰火箭，当时火箭市场远未形成充分竞争，人们认为火箭是一种研究性产品，所以成本不是一个重要的考虑因素。但为了送人类上火星，不能再视成本为房间的的大象，所以通过第一性原理分析能找到关键成本瓶颈，这就包括人们熟知的火箭成本和供应链成本。再结合批量生产的优势，总成本就会降低。",{"type":176,"tag":191,"props":591,"children":592},{},[593],{"type":182,"value":594},"可以发现，第一性原理在市场化程度低、商业模式未被发掘的领域有着巨大优势，并且能带来明显的后发优势。这就是马斯克把亚里士多德的第一性原理再次带火的原因。",{"type":176,"tag":184,"props":596,"children":598},{"id":597},"如何从供给端及变现端分析国内手游市场",[599],{"type":182,"value":600},"如何从供给端及变现端分析国内手游市场？",{"type":176,"tag":191,"props":602,"children":603},{},[604],{"type":182,"value":605},"供给端分析主要包括开发成本、政策环境、技术革新、内容创新等关键点；变现端则涉及内购模式、广告模式、混合变现、IP 联动等因素。",{"type":176,"tag":191,"props":607,"children":608},{},[609],{"type":182,"value":610},"按照变现模式，游戏一般分为 IAP 和 IAA 两种模式。从 Flappy Bird 到王者荣耀，两种模式在内外部环境及用户需求上都有明显差异，早期游戏通过短信扣费的形式营收，从 Flappy Bird 等休闲游戏获得关注，因为低投入、政策宽松等因素吸引了一批开发者。",{"type":176,"tag":191,"props":612,"children":613},{},[614],{"type":182,"value":615},"政策变化很快，从 2016 年 7 月开始，所有的手游只要有内购就必须申请版号，再到 2018 年 3 月，游戏版号政策再次收紧，更多的开发者从高技术投入的游戏转向轻度游戏，如 H5、小程序等。IAP 游戏模式在轻度游戏中似乎不好使，取而代之的是借助广告联盟提高了变现效率的 IAA 模式。",{"type":176,"tag":191,"props":617,"children":618},{},[619],{"type":182,"value":620},"由此可见，供给侧的政策变化导致的技术倾向，以及广告联盟 oCPM 等双赢模式出现在变现端的崛起，再加上互联网的普及带来的低流量成本、碎片化时间等用户端因素，联合将手游市场推向了新趋势。以往游戏在成建制的游戏公司的开发模式下，逐步转向轻量化的个体开发模式，并且在前者的市场中挖走一口新的蛋糕。",{"type":176,"tag":184,"props":622,"children":624},{"id":623},"左晖创办的链家如何实现商业模式创新",[625],{"type":182,"value":626},"左晖创办的链家如何实现商业模式创新？",{"type":176,"tag":191,"props":628,"children":629},{},[630],{"type":182,"value":631},"过去，房产经纪人的平均从业时间只有 6 个月，因此和用户打交道时倾向使用单次博弈策略（短期利益最大化）。这在长期来看促使了恶化经纪人名声，进一步缩短其从业时间的恶性循环。也因此，经纪人和经纪人、经纪人和平台之间的关系都是零和博弈。以往说起中介都是“黑中介”、“坑人”的代名词。",{"type":176,"tag":191,"props":633,"children":634},{},[635],{"type":182,"value":636},"左晖在行业最大的价值是通过改变行业内的博弈结构提高了用户和经纪人的利益，用他自己的话来说“做难而正确的事情”，创造价值，顺便实现了商业价值。",{"type":176,"tag":191,"props":638,"children":639},{},[640],{"type":182,"value":641},"在经纪人层面，链家为经纪人提供更深化的职业路径，通过培训、职业考试和其他激励手段，提升了经纪人的专业性和服务质量。将经纪人的服务工作链路拆解为 10 个，每一环节参与者都可以按最终成交比例抽成，将零和博弈转换成合作共赢。两套系统并行运行，为经纪人创造终生职业发展的可能性，提升了职业专业性，带来更多尊严。",{"type":176,"tag":191,"props":643,"children":644},{},[645],{"type":182,"value":646},"另一个非常重要的原因是链家主动投入数据技术的怀抱，创立数据研究院，投入海量资金建成的 1200TB 房源数据库，以及在线下保证了数据采集的有效性。线上线下一同发力，解决了以往中介“30%+”虚假房源等致命问题。",{"type":176,"tag":191,"props":648,"children":649},{},[650],{"type":182,"value":651},"最后，在政策面，积极响应政策，参与政府项目建设，推动行业规范化，提升行业整体形象。这也是链家能够在行业中脱颖而出的重要原因。",{"type":176,"tag":184,"props":653,"children":655},{"id":654},"为什么链家能干倒一大票互联网中介",[656],{"type":182,"value":657},"为什么链家能干倒一大票互联网中介？",{"type":176,"tag":213,"props":659,"children":660},{},[661,671,681],{"type":176,"tag":217,"props":662,"children":663},{},[664,669],{"type":176,"tag":485,"props":665,"children":666},{},[667],{"type":182,"value":668},"数据深度＞数据广度",{"type":182,"value":670},"：1200TB 的房源数据库形成了有效的竞争壁垒",{"type":176,"tag":217,"props":672,"children":673},{},[674,679],{"type":176,"tag":485,"props":675,"children":676},{},[677],{"type":182,"value":678},"服务质量决定用户黏性",{"type":182,"value":680},"：每 5 平方公里 1 个门店的覆盖网络带来高密度的服务，此外，早期互联网产业无法取缔经纪人在贷款等重线下环节提供的服务",{"type":176,"tag":217,"props":682,"children":683},{},[684,689],{"type":176,"tag":485,"props":685,"children":686},{},[687],{"type":182,"value":688},"信任资产需长期积累",{"type":182,"value":690},"：品牌效应以及响应政策建立的赔付基金体系，使新兴互联网平台短期难复制",{"type":176,"tag":184,"props":692,"children":694},{"id":693},"为何手机厂商要涉及互联网及软件业务",[695],{"type":182,"value":696},"为何手机厂商要涉及互联网及软件业务？",{"type":176,"tag":191,"props":698,"children":699},{},[700],{"type":182,"value":701},"2020 年苹果财报显示，以 App Store 为主的互联网软件服务收入达到了空前的 536 亿美元。早期为了抗衡苹果强大的生态整合能力（iOS + App Stores + 自研芯片），谷歌推出了开源操作系统安卓。国内限于政策原因不好扩张，但国内一众拥有研发能力的厂商看到了此机会，借开源安卓，纷纷推出自己的操作系统。第一次拥有了操作系统的底层控制权（PC+Mobile），布下软硬件+互联网三位一体的能力。",{"type":176,"tag":191,"props":703,"children":704},{},[705],{"type":182,"value":706},"一来，软硬件+互联网的协同能力，通过统一默认应用、系统优化、开放新 UI 等功能，使手机更好用。雷军更是提出著名的铁人三项理论，硬件 + 软件 + 互联网，通过高性价比的硬件和深度定制的 MIUI 系统，让手机具备非常强的卖点，再通过大规模用户形成流量，进行互联网增值变现，反哺硬件业务。",{"type":176,"tag":191,"props":708,"children":709},{},[710],{"type":182,"value":711},"二是，整合生态有很强的吸金能力。众厂商纷纷效仿苹果在系统层面通过广告、增值服务、应用商店抽佣、应用收费抽成等方法变现。但和苹果不同的是，国内厂商没有类似苹果的垄断能力，所以在定制系统的基础上量身定制了从应用安装，浏览器、安全管理及日历短信等中间层应用矩阵。",{"type":176,"tag":184,"props":713,"children":715},{"id":714},"为何美团在外卖业务上赶超饿了么",[716],{"type":182,"value":717},"为何美团在外卖业务上赶超饿了么？",{"type":176,"tag":191,"props":719,"children":720},{},[721],{"type":182,"value":722},"外卖业务早期发展如此之慢，具体来说是，开业四年的饿了么连武汉这座大学城都没有完全覆盖。主要原因是他们没有可参考对象，在业务探索阶段的策略上翻了几个关键错误：误判了市场规模，以及没有培育市场的概念。",{"type":176,"tag":191,"props":724,"children":725},{},[726],{"type":182,"value":727},"美团在后来通过调研重新评估了外卖业务决定跟进，并通过精细化运营急速扩张，形成后来者居上的局面。",{"type":176,"tag":213,"props":729,"children":730},{},[731,736,741,746],{"type":176,"tag":217,"props":732,"children":733},{},[734],{"type":182,"value":735},"用户分层：校园用户和白领用户的需求不同，其时效要求、品质需求及各自市场的开拓成本、配送成本都有差异。",{"type":176,"tag":217,"props":737,"children":738},{},[739],{"type":182,"value":740},"城市覆盖：依照过往团购业务的经验和数据，结合城市的消费水平、人均 GDP、餐馆等维度为据，定义扩张顺序。优先拓展高价值城市，在饿了么还没有进入的城市重点发力，以形成先发优势。",{"type":176,"tag":217,"props":742,"children":743},{},[744],{"type":182,"value":745},"蜂窝分层：商户各自覆盖不同的经营范围，但如果将城市内全部商家都签入，无疑对业务造成巨大冲击，所以在短期无法突破蜂窝内大循环的情况下，先切入有限商家做蜂窝小循环，验证好业务飞轮后再逐步扩大。",{"type":176,"tag":217,"props":747,"children":748},{},[749],{"type":182,"value":750},"补贴分层：补贴是培养用户习惯的一个方法，但不同的补贴策略有不同效果。以美团为例，园市场优先补贴用户以满足性价比等需求，重点在培养消费习惯，而在白领市场优先补贴商家，在外卖种类、品牌等方面发力，提高品质。",{"type":176,"tag":184,"props":752,"children":754},{"id":753},"百度的成功和落后",[755],{"type":182,"value":756},"百度的成功和落后？",{"type":176,"tag":191,"props":758,"children":759},{},[760],{"type":182,"value":761},"PC 时代，百度凭借搜索引擎技术成为中国互联网用户获取信息的核心入口；通过内容生态建设（如百度贴吧、百度知道、百度百科等）巩固了用户粘性；同时，利用收购 hao123 和网吧渠道推广等策略扩大用户基础。",{"type":176,"tag":191,"props":763,"children":764},{},[765],{"type":182,"value":766},"移动时代，百度过度依赖搜索业务，未能及时适应移动互联网时代信息分发模式的变化（如个性化推荐的兴起）；在移动广告变现（如 Feed 广告）方面反应迟缓；同时，战略摇摆（如押注 O2O 业务）导致错失信息流和短视频等新兴赛道的机会。",{"type":176,"tag":184,"props":768,"children":770},{"id":769},"想改变市场做应用内搜索业务的豌豆荚为何失败",[771],{"type":182,"value":772},"想改变市场，做应用内搜索业务的豌豆荚为何失败？",{"type":176,"tag":191,"props":774,"children":775},{},[776],{"type":182,"value":777},"早期豌豆荚成员许多来源于谷歌，他们熟悉搜索业务，并有打造移动时代的新搜索引擎的雄心壮志。豌豆荚不仅仅作为应用商店，而是还要索引各应用中的垂直内容，直接展现给用户，并引导用户在应用来消费内容。可惜，最终未能实现这一目标。",{"type":176,"tag":213,"props":779,"children":780},{},[781,786,791,796],{"type":176,"tag":217,"props":782,"children":783},{},[784],{"type":182,"value":785},"技术层面：移动互联网时代缺乏类似 PC 时代的信息互通规则（互联网、HTTP 跳转协议），应用内搜索面临技术难题（巨头需要构建信息壁垒）。",{"type":176,"tag":217,"props":787,"children":788},{},[789],{"type":182,"value":790},"战略层面：押注搜索，导致错失了占领应用分发这个市场的机会。",{"type":176,"tag":217,"props":792,"children":793},{},[794],{"type":182,"value":795},"市场层面：头部应用不愿意开放内容；手机厂商对系统及系统软件的投入进一步削弱应用商店流量。",{"type":176,"tag":217,"props":797,"children":798},{},[799],{"type":182,"value":800},"产品层面：应用、应用商店是一次性关系，用户习惯很难逆转，此逆向飞轮使豌豆荚难以维持与中长尾 App 的合作关系。",{"type":176,"tag":191,"props":802,"children":803},{},[804],{"type":182,"value":805},"很多时候，需要发现需求，而不是创造需求。",{"type":176,"tag":184,"props":807,"children":809},{"id":808},"yy-语音的商业化历程如何体现了商业环境的动态性",[810],{"type":182,"value":811},"YY 语音的商业化历程如何体现了商业环境的动态性？",{"type":176,"tag":191,"props":813,"children":814},{},[815],{"type":182,"value":816},"作为语音工具类产品，短平快的产品体验难以承受高频长时的广告策略或付费商业化带来的弊端（被免费产品切走蛋糕）。但 YY 在扩大市场和用户规模的过程中，首先通过免费和快速标签，抓住传统产品（如 TeamSpeak）漏洞快速壮大，抢夺了国内游戏语音市场的巨大流量。在此基础上，它发掘了语音工具类产品背后形成的新场景，抓住了草根歌手等机会，推出增花等增值服务，并逐渐演化出付费订阅模式，从工具类产品成功转型为内容化平台产品。",{"type":176,"tag":191,"props":818,"children":819},{},[820],{"type":182,"value":821},"商业环境的动态性在另一方面体现在，YY 的成功转型势必给新的免费的垂直类型工具类产品（如 TT 语音）带来生存空间。市场上总有生生死死，新的机会和挑战并存，企业需要不断调整策略，适应市场环境的变化。",{"type":176,"tag":184,"props":823,"children":825},{"id":824},"拼多多在电商市场中崛起的关键因素有哪些",[826],{"type":182,"value":827},"拼多多在电商市场中崛起的关键因素有哪些？",{"type":176,"tag":191,"props":829,"children":830},{},[831],{"type":182,"value":832},"从外部市场来看，淘宝给予了拼多多海量的机会。在与京东的竞争中，为了打造天猫，在 2015 年打假行动一天就清退了 24w 低质商家，这些商家不会消失，最终会外溢到拼多多；在与微信的互相封锁锁定上流流量时，拼多多的社交、拼团、红包模式很好的和微信形成互补，借微信支付迎来高速发展。拼多多本身发展，就坚持使用极致的增长策略，赚到的钱全部拿去做增长，甚至可以接受大额亏损，公司内的一切业务都围绕增长进行服务，进而形成改规模化优势。",{"type":176,"tag":184,"props":834,"children":836},{"id":835},"哈啰如何从共享单车市场杀出",[837],{"type":182,"value":838},"哈啰如何从共享单车市场杀出？",{"type":176,"tag":191,"props":840,"children":841},{},[842],{"type":182,"value":843},"和初期巨头 ofo、摩拜使用互联网资本运作常见手法大体量碾压对手不同的是，哈啰单车的发展策略非常务实：",{"type":176,"tag":213,"props":845,"children":846},{},[847,852,857],{"type":176,"tag":217,"props":848,"children":849},{},[850],{"type":182,"value":851},"资金有限，所以选择二三线城市扩张：这是一个非共识机会，因为以往大家觉得共享单车存在依赖于大城市才有的“最后一公里”现象。",{"type":176,"tag":217,"props":853,"children":854},{},[855],{"type":182,"value":856},"通过数据分析，提高运营效率，降低运营成本：哈啰除了通过热区图优化运营效率，还使用网格化管理等手段有效提高了单车的维护效率。相比 ofo 某年的 60% 的折损率以及摩拜 20% 的折损率，哈啰的折损率非常低。",{"type":176,"tag":217,"props":858,"children":859},{},[860],{"type":182,"value":861},"背靠蚂蚁金服，无押金模式扩展反杀对手：一方面借助了支付宝的快速扩张，另一方面是无押金模式也许间接对有押金的对手造成挤兑效应。",{"type":176,"tag":184,"props":863,"children":865},{"id":864},"wifi-万能钥匙如何能下载量比肩微信",[866],{"type":182,"value":867},"WiFi 万能钥匙如何能下载量比肩微信？",{"type":176,"tag":191,"props":869,"children":870},{},[871],{"type":182,"value":872},"早期移动互联网用户面临着流量费用高昂、网速慢以及家庭 WiFi 设置复杂等问题，WiFi 万能钥匙通过共享 WiFi 密码的方式，让用户低成本地接入网络，满足了用户的上网需求。尽管因为野蛮的产品策略带来的极差口碑，以及后来在技术层面上随着网络普及及其他因素影响逐渐走向衰微，但在其创始初期短短几年，就做成了除微信和 QQ 外下载量最高的第三大移动互联网应用。为了激励团队，2015 年初，陈大年给团队 36 人每人送了一辆 Tesla S。",{"type":176,"tag":177,"props":874,"children":876},{"id":875},"数据整合",[877],{"type":182,"value":875},{"type":176,"tag":184,"props":879,"children":881},{"id":880},"_2024-年中国移动互联网用户使用时长",[882],{"type":182,"value":883},"2024 年中国移动互联网用户使用时长？",{"type":176,"tag":191,"props":885,"children":886},{},[887],{"type":182,"value":888},"数据来自 DeepSeek R1 搜索整合：",{"type":176,"tag":213,"props":890,"children":891},{},[892,897,902],{"type":176,"tag":217,"props":893,"children":894},{},[895],{"type":182,"value":896},"核心行业超强增长，短视频与社交占据近 70% 时长，压缩长尾应用时长。",{"type":176,"tag":217,"props":898,"children":899},{},[900],{"type":182,"value":901},"新兴领域萌发，如 AIGC 工具、汽车伴侣、智能家居等应用。",{"type":176,"tag":217,"props":903,"children":904},{},[905],{"type":182,"value":906},"代际差异明显，一二线青睐社交游戏、三四线喜欢短视频和本地生活；00 后人均游戏时长超 1.2 小时，发群体则集中于在线视频和有声内容。",{"type":176,"tag":191,"props":908,"children":909},{},[910,912],{"type":182,"value":911},"见：",{"type":176,"tag":352,"props":913,"children":916},{"href":914,"rel":915},"https://www.thepaper.cn/newsDetail_forward_27284979",[356],[917],{"type":182,"value":918},"2024 中国移动互联网春季大报告：用户规模达 12.32 亿 @QuestMobile",{"type":176,"tag":177,"props":920,"children":922},{"id":921},"分析练习",[923],{"type":182,"value":921},{"type":176,"tag":184,"props":925,"children":927},{"id":926},"wegicai",[928],{"type":176,"tag":352,"props":929,"children":932},{"href":930,"rel":931},"https://wegic.ai/app/1879174774756683778",[356],[933],{"type":182,"value":934},"wegic.ai",{"type":176,"tag":191,"props":936,"children":937},{},[938],{"type":176,"tag":252,"props":939,"children":941},{"alt":169,"src":940},"https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/202503070323832.png",[],{"type":176,"tag":177,"props":943,"children":945},{"id":944},"阅读",[946],{"type":182,"value":944},{"type":176,"tag":213,"props":948,"children":949},{},[950,960],{"type":176,"tag":217,"props":951,"children":952},{},[953],{"type":176,"tag":352,"props":954,"children":957},{"href":955,"rel":956},"https://mp.weixin.qq.com/s/2I2gMwcLQQNaR5_d6ELIIA",[356],[958],{"type":182,"value":959},"2018 年最值得读的 20 篇商业长文 @卫夕指北",{"type":176,"tag":217,"props":961,"children":962},{},[963],{"type":176,"tag":352,"props":964,"children":967},{"href":965,"rel":966},"https://mp.weixin.qq.com/s?__biz=MzA3NDI0ODMzMw==&mid=2651302602&idx=1&sn=289c94defd746da35307085fb03be4fa&chksm=84f1b328b3863a3efdf32e07433335f1643f2e44f3d0b6f0d56d1e3d5633c5672570eae4dcc8&scene=21#wechat_redirect",[356],[968],{"type":182,"value":969},"对话拼多多黄峥：他们建帝国、争地盘，我要错位竞争",{"title":169,"searchDepth":971,"depth":971,"links":972},2,[973,974,975,976,977,978,979],{"id":179,"depth":971,"text":179},{"id":234,"depth":971,"text":234},{"id":419,"depth":971,"text":419},{"id":563,"depth":971,"text":563},{"id":875,"depth":971,"text":875},{"id":921,"depth":971,"text":921},{"id":944,"depth":971,"text":944},"markdown","content:6.maps:_business:business-analysis.md","content","6.maps/_business/business-analysis.md","6.maps/_business/business-analysis","md",[987,991],{"_path":988,"title":989,"description":990},"/maps/_blogs/herb-caudill","Herb Caudill","对软件工程的反思",{"_path":992,"title":993,"description":994},"/maps/_business/business-examples","商业思维案例笔记@曹雄峰","理解商业世界，破解决策难题",1767949769759]