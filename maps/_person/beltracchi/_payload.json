g",{"title":388,"_path":389,"children":390},"我 / About","/hire",[391],{"title":392,"_path":389},"📬 技术简历",{"_path":394,"_dir":395,"_draft":396,"_partial":397,"_locale":398,"title":399,"description":400,"body":401,"_type":507,"_id":508,"_source":509,"_file":510,"_stem":511,"_extension":512},"/maps/_person/beltracchi","_person",false,true,"","贝特拉基","贝特拉基是一个德国画家，曾以伪造画作闻名。",{"type":402,"children":403,"toc":503},"root",[404,413,419,424,445,458],{"type":405,"tag":406,"props":407,"children":409},"element","h4",{"id":408},"现代假画之王贝特拉基的故事",[410],{"type":411,"value":412},"text","现代假画之王贝特拉基的故事？",{"type":405,"tag":414,"props":415,"children":416},"p",{},[417],{"type":411,"value":418},"贝特拉基 1951 年出生于德国人，原名叫费舍尔，但后来二婚后改妻姓才叫 Beltracchi。Beltracchi 是个意大利的姓氏，所以应该翻译为“贝特拉基”而不是英译“贝特莱奇”。",{"type":405,"tag":414,"props":420,"children":421},{},[422],{"type":411,"value":423},"青年时的贝特拉基有相当高的绘画天赋，曾在 1978 年在慕尼黑一个相当有名的绘画展展出过，并以一万五千马克的价格售出过一副作品。曾有画廊邀约他为签约画家，但他不想丢下“性、毒品与摇滚”的自由自在的嬉皮士生活拒绝了该邀请。除了画自己的作品，他还做起了假画生意，主要思路是仿制一些史料模糊的中档作者的绘画。一开始他完全单枪匹马做造假，知道后来碰上了画商舒尔特·克林豪斯和海伦，于是三人分工，分别画假画、销售以及编造故事。据不完全统计，直到 2010 年东窗事发，贝特拉基在 30 余年画假画的生涯中，共假冒在绘画史上知名度不一的 50 余位画家的 300 余幅绘画作品，至少获得了 3500 万欧元的不义之财。",{"type":405,"tag":414,"props":425,"children":426},{},[427,429,443],{"type":411,"value":428},"贝特拉基被捕后，在监狱度过了六年时光。从监狱获释后，贝特拉基和他的妻子继续以艺术家的身份工作，出版了自传和电影（《伪造的艺术》，2014年），并从画作中赚了数百万美元收入",{"type":405,"tag":430,"props":431,"children":432},"sup",{},[433],{"type":405,"tag":434,"props":435,"children":440},"a",{"href":436,"ariaDescribedBy":437,"dataFootnoteRef":398,"id":439},"#user-content-fn-income",[438],"footnote-label","user-content-fnref-income",[441],{"type":411,"value":442},"1",{"type":411,"value":444},"。",{"type":405,"tag":414,"props":446,"children":447},{},[448,450],{"type":411,"value":449},"见：",{"type":405,"tag":434,"props":451,"children":455},{"href":452,"rel":453},"https://www.zhihu.com/xen/market/pdf-view/paid_magazine/1395369078886834176",[454],"nofollow",[456],{"type":411,"value":457},"《现代假画之王贝特拉基》",{"type":405,"tag":459,"props":460,"children":463},"section",{"className":461,"dataFootnotes":398},[462],"footnotes",[464,472],{"type":405,"tag":465,"props":466,"children":469},"h2",{"className":467,"id":438},[468],"sr-only",[470],{"type":411,"value":471},"Footnotes",{"type":405,"tag":473,"props":474,"children":475},"ol",{},[476],{"type":405,"tag":477,"props":478,"children":480},"li",{"id":479},"user-content-fn-income",[481,492,494],{"type":405,"tag":434,"props":482,"children":485},{"href":483,"rel":484},"https://www.we-wealth.com/news/pleasure-assets/opere-darte/beltracchi-due-falsari-bonny-clyde-xxi-secolo",[454],[486],{"type":405,"tag":487,"props":488,"children":489},"i",{},[490],{"type":411,"value":491},"Beltracchi, i due falsari d'arte alla 'Bonnie e Clyde' del XXI secolo",{"type":411,"value":493}," ",{"type":405,"tag":434,"props":495,"children":500},{"href":496,"ariaLabel":497,"className":498,"dataFootnoteBackref":398},"#user-content-fnref-income","Back to reference 1",[499],"data-footnote-backref",[501],{"type":411,"value":502},"↩",{"title":398,"searchDepth":504,"depth":504,"links":505},2,[506],{"id":438,"depth":504,"text":471},"markdown","content:6.maps:_person:beltracchi.md","content","6.maps/_person/beltracchi.md","6.maps/_person/beltracchi","md",[514,518],{"_path":515,"title":516,"description":517},"/maps/_person/armstrong","阿姆斯特朗","阿姆斯特朗关于工程的演讲",{"_path":519,"title":520,"description":521},"/maps/_person/claudius-ptolemaeus","克罗狄斯·托勒密","地心说",1741604965495]