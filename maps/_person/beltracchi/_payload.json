n",{"title":388,"_path":389},"VS Code 插件开发","/gists/vscode-plugin",{"title":391,"_path":392},"Web Components","/gists/web-components",{"title":394,"_path":395},"Windows","/gists/windows",{"title":397,"_path":398},"查缺补漏","/gists/wrong",{"title":400,"_path":401,"children":402},"代码笔记 / Gists","/source-code",[403],{"title":404,"_path":401},"🚄 代码笔记",{"title":406,"_path":407,"children":408},"我 / Abount","/hire",[409],{"title":410,"_path":407},"📬 技术简历",{"title":412,"_path":413,"children":414},"todo","/todo",[415],{"title":412,"_path":413},{"_path":417,"_dir":418,"_draft":419,"_partial":420,"_locale":421,"title":422,"description":423,"body":424,"_type":530,"_id":531,"_source":532,"_file":533,"_stem":534,"_extension":535},"/maps/_person/beltracchi","_person",false,true,"","贝特拉基","贝特拉基是一个德国画家，曾以伪造画作闻名。",{"type":425,"children":426,"toc":526},"root",[427,436,442,447,468,481],{"type":428,"tag":429,"props":430,"children":432},"element","h4",{"id":431},"现代假画之王贝特拉基的故事",[433],{"type":434,"value":435},"text","现代假画之王贝特拉基的故事？",{"type":428,"tag":437,"props":438,"children":439},"p",{},[440],{"type":434,"value":441},"贝特拉基 1951 年出生于德国人，原名叫费舍尔，但后来二婚后改妻姓才叫 Beltracchi。Beltracchi 是个意大利的姓氏，所以应该翻译为“贝特拉基”而不是英译“贝特莱奇”。",{"type":428,"tag":437,"props":443,"children":444},{},[445],{"type":434,"value":446},"青年时的贝特拉基有相当高的绘画天赋，曾在 1978 年在慕尼黑一个相当有名的绘画展展出过，并以一万五千马克的价格售出过一副作品。曾有画廊邀约他为签约画家，但他不想丢下“性、毒品与摇滚”的自由自在的嬉皮士生活拒绝了该邀请。除了画自己的作品，他还做起了假画生意，主要思路是仿制一些史料模糊的中档作者的绘画。一开始他完全单枪匹马做造假，知道后来碰上了画商舒尔特·克林豪斯和海伦，于是三人分工，分别画假画、销售以及编造故事。据不完全统计，直到 2010 年东窗事发，贝特拉基在 30 余年画假画的生涯中，共假冒在绘画史上知名度不一的 50 余位画家的 300 余幅绘画作品，至少获得了 3500 万欧元的不义之财。",{"type":428,"tag":437,"props":448,"children":449},{},[450,452,466],{"type":434,"value":451},"贝特拉基被捕后，在监狱度过了六年时光。从监狱获释后，贝特拉基和他的妻子继续以艺术家的身份工作，出版了自传和电影（《伪造的艺术》，2014年），并从画作中赚了数百万美元收入",{"type":428,"tag":453,"props":454,"children":455},"sup",{},[456],{"type":428,"tag":457,"props":458,"children":463},"a",{"href":459,"ariaDescribedBy":460,"dataFootnoteRef":421,"id":462},"#user-content-fn-income",[461],"footnote-label","user-content-fnref-income",[464],{"type":434,"value":465},"1",{"type":434,"value":467},"。",{"type":428,"tag":437,"props":469,"children":470},{},[471,473],{"type":434,"value":472},"见：",{"type":428,"tag":457,"props":474,"children":478},{"href":475,"rel":476},"https://www.zhihu.com/xen/market/pdf-view/paid_magazine/1395369078886834176",[477],"nofollow",[479],{"type":434,"value":480},"《现代假画之王贝特拉基》",{"type":428,"tag":482,"props":483,"children":486},"section",{"className":484,"dataFootnotes":421},[485],"footnotes",[487,495],{"type":428,"tag":488,"props":489,"children":492},"h2",{"className":490,"id":461},[491],"sr-only",[493],{"type":434,"value":494},"Footnotes",{"type":428,"tag":496,"props":497,"children":498},"ol",{},[499],{"type":428,"tag":500,"props":501,"children":503},"li",{"id":502},"user-content-fn-income",[504,515,517],{"type":428,"tag":457,"props":505,"children":508},{"href":506,"rel":507},"https://www.we-wealth.com/news/pleasure-assets/opere-darte/beltracchi-due-falsari-bonny-clyde-xxi-secolo",[477],[509],{"type":428,"tag":510,"props":511,"children":512},"i",{},[513],{"type":434,"value":514},"Beltracchi, i due falsari d'arte alla 'Bonnie e Clyde' del XXI secolo",{"type":434,"value":516}," ",{"type":428,"tag":457,"props":518,"children":523},{"href":519,"ariaLabel":520,"className":521,"dataFootnoteBackref":421},"#user-content-fnref-income","Back to reference 1",[522],"data-footnote-backref",[524],{"type":434,"value":525},"↩",{"title":421,"searchDepth":527,"depth":527,"links":528},2,[529],{"id":461,"depth":527,"text":494},"markdown","content:6.maps:_person:beltracchi.md","content","6.maps/_person/beltracchi.md","6.maps/_person/beltracchi","md",[537,541],{"_path":538,"title":539,"description":540},"/maps/_person/armstrong","阿姆斯特朗","阿姆斯特朗关于工程的演讲",{"_path":542,"title":543,"description":544},"/maps/_person/claudius-ptolemaeus","克罗狄斯·托勒密","地心说",1735116266993]