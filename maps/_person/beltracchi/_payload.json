:503,"_id":504,"_source":505,"_file":506,"_extension":507},"/maps/_person/beltracchi","_person",false,true,"","贝特拉基",{"type":394,"children":395,"toc":498},"root",[396,403,409,423,429,434,454],{"type":397,"tag":398,"props":399,"children":400},"element","h1",{"id":392},[401],{"type":402,"value":392},"text",{"type":397,"tag":404,"props":405,"children":407},"h2",{"id":406},"相关",[408],{"type":402,"value":406},{"type":397,"tag":410,"props":411,"children":413},"h4",{"id":412},"现代假画之王贝特拉基",[414],{"type":397,"tag":415,"props":416,"children":420},"a",{"href":417,"rel":418},"https://www.zhihu.com/xen/market/pdf-view/paid_magazine/1395369078886834176",[419],"nofollow",[421],{"type":402,"value":422},"《现代假画之王贝特拉基》",{"type":397,"tag":424,"props":425,"children":426},"p",{},[427],{"type":402,"value":428},"贝特拉基 1951 年出生于德国人，原名叫费舍尔，但后来二婚后改妻姓才叫 Beltracchi。Beltracchi 是个意大利的姓氏，所以应该翻译为“贝特拉基”而不是英译“贝特莱奇”。",{"type":397,"tag":424,"props":430,"children":431},{},[432],{"type":402,"value":433},"青年时的贝特拉基有相当高的绘画天赋，曾在 1978 年在慕尼黑一个相当有名的绘画展展出过，并以一万五千马克的价格售出过一副作品。曾有画廊邀约他为签约画家，但他不想丢下“性、毒品与摇滚”的自由自在的嬉皮士生活拒绝了该邀请。除了画自己的作品，他还做起了假画生意，主要思路是仿制一些史料模糊的中档作者的绘画。一开始他完全单枪匹马做造假，知道后来碰上了画商舒尔特·克林豪斯和海伦，于是三人分工，分别画假画、销售以及编造故事。据不完全统计，直到 2010 年东窗事发，贝特拉基在 30 余年画假画的生涯中，共假冒在绘画史上知名度不一的 50 余位画家的 300 余幅绘画作品，至少获得了 3500 万欧元的不义之财。",{"type":397,"tag":424,"props":435,"children":436},{},[437,439,452],{"type":402,"value":438},"贝特拉基被捕后，在监狱度过了六年时光。从监狱获释后，贝特拉基和他的妻子继续以艺术家的身份工作，出版了自传和电影（《伪造的艺术》，2014年），并从画作中赚了数百万美元收入",{"type":397,"tag":440,"props":441,"children":442},"sup",{},[443],{"type":397,"tag":415,"props":444,"children":449},{"href":445,"ariaDescribedBy":446,"dataFootnoteRef":391,"id":448},"#user-content-fn-income",[447],"footnote-label","user-content-fnref-income",[450],{"type":402,"value":451},"1",{"type":402,"value":453},"。",{"type":397,"tag":455,"props":456,"children":459},"section",{"className":457,"dataFootnotes":391},[458],"footnotes",[460,467],{"type":397,"tag":404,"props":461,"children":464},{"className":462,"id":447},[463],"sr-only",[465],{"type":402,"value":466},"Footnotes",{"type":397,"tag":468,"props":469,"children":470},"ol",{},[471],{"type":397,"tag":472,"props":473,"children":475},"li",{"id":474},"user-content-fn-income",[476,487,489],{"type":397,"tag":415,"props":477,"children":480},{"href":478,"rel":479},"https://www.we-wealth.com/news/pleasure-assets/opere-darte/beltracchi-due-falsari-bonny-clyde-xxi-secolo",[419],[481],{"type":397,"tag":482,"props":483,"children":484},"i",{},[485],{"type":402,"value":486},"Beltracchi, i due falsari d'arte alla 'Bonnie e Clyde' del XXI secolo",{"type":402,"value":488}," ",{"type":397,"tag":415,"props":490,"children":495},{"href":491,"ariaLabel":492,"className":493,"dataFootnoteBackref":391},"#user-content-fnref-income","Back to reference 1",[494],"data-footnote-backref",[496],{"type":402,"value":497},"↩",{"title":391,"searchDepth":499,"depth":499,"links":500},2,[501,502],{"id":406,"depth":499,"text":406},{"id":447,"depth":499,"text":466},"markdown","content:6.maps:_person:beltracchi.md","content","6.maps/_person/beltracchi.md","md",[509,512],{"_path":510,"title":511,"description":391},"/maps/_person/armstrong","阿姆斯特朗",{"_path":513,"title":514,"description":391},"/maps/_person/bill-gates","Bill Gates",1710257745118]