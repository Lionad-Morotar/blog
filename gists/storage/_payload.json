th":389,"children":390},"我 / About","/hire",[391],{"title":392,"_path":389},"📬 技术简历",{"_path":344,"_dir":394,"_draft":395,"_partial":395,"_locale":396,"title":343,"description":396,"body":397,"_type":605,"_id":606,"_source":607,"_file":608,"_stem":609,"_extension":610},"gists",false,"",{"type":398,"children":399,"toc":595},"root",[400,408,415,434,440,446,453,458,466,487,495,500,508,513,521,526,534,542,547,563],{"type":401,"tag":402,"props":403,"children":405},"element","h1",{"id":404},"storage",[406],{"type":407,"value":343},"text",{"type":401,"tag":409,"props":410,"children":412},"h2",{"id":411},"rtx-io",[413],{"type":407,"value":414},"RTX IO",{"type":401,"tag":416,"props":417,"children":418},"p",{},[419,425,430],{"type":401,"tag":420,"props":421,"children":424},"img",{"alt":422,"src":423},"games bottlenecked by traditional IO","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/20220406092957.png",[],{"type":401,"tag":420,"props":426,"children":429},{"alt":427,"src":428},"compressed data needed, but CPU cant keep up","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/20220406093020.png",[],{"type":401,"tag":420,"props":431,"children":433},{"alt":414,"src":432},"https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/20220406093202.png",[],{"type":401,"tag":409,"props":435,"children":437},{"id":436},"ssdsolid-state-driver",[438],{"type":407,"value":439},"SSD（Solid State Driver）",{"type":401,"tag":441,"props":442,"children":444},"h3",{"id":443},"工程原理",[445],{"type":407,"value":443},{"type":401,"tag":447,"props":448,"children":450},"h4",{"id":449},"vnand",[451],{"type":407,"value":452},"VNAND",{"type":401,"tag":416,"props":454,"children":455},{},[456],{"type":407,"value":457},"SSD 的基本储存单位是 CTF 单元（Charge Trap Flash memoery cell），它通过控制电子的数量以电流通路来判断单个位的信息，即 0 或 1。2020 年，前沿的 CTF 单元可以单单元储存 4 Bits 的信息，且其控制电子的数量级可以保持 10 年（也即 SSD 的寿命）。",{"type":401,"tag":416,"props":459,"children":460},{},[461],{"type":401,"tag":420,"props":462,"children":465},{"alt":463,"src":464},"single CTF cell","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/20220324200320.png?w=40",[],{"type":401,"tag":416,"props":467,"children":468},{},[469,471,485],{"type":407,"value":470},"在 VNAND 技术中，CTF 单元在 Z 轴方向上，层叠 10 个在一起",{"type":401,"tag":472,"props":473,"children":474},"sup",{},[475],{"type":401,"tag":476,"props":477,"children":482},"a",{"href":478,"ariaDescribedBy":479,"dataFootnoteRef":396,"id":481},"#user-content-fn-string",[480],"footnote-label","user-content-fnref-string",[483],{"type":407,"value":484},"1",{"type":407,"value":486},"，在结构上形成串（String）。在读取时，控制栅（Control Gate）自底向上逐个询问单 CTF 单元的电荷水平，并向上信号到串顶端的位线（Bitline）上。同理，写入也必须通过控制栅逐层操作。",{"type":401,"tag":416,"props":488,"children":489},{},[490],{"type":401,"tag":420,"props":491,"children":494},{"alt":492,"src":493},"control gate & bitline","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/20220324201156.png?w=60",[],{"type":401,"tag":416,"props":496,"children":497},{},[498],{"type":407,"value":499},"每个控制栅连接了 32 个水平的 CTF，这叫页（Page）。可以发现，页和串分别共享了单个控制栅和单个位线。如果把页和串组成的平面结构，在 Z 轴方向层叠起来，就得到了行（Row）。行在 Y 轴方向排列，每 6 行又组成了一个块（Block）。我们已经知道了块在 X 轴方向的平面结构是行，剩下 Y、Z 轴向的平面也有名称，分别是列（Column）和层（Layer）。",{"type":401,"tag":416,"props":501,"children":502},{},[503],{"type":401,"tag":420,"props":504,"children":507},{"alt":505,"src":506},"Block's Structure","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/20220324202434.png?w=60",[],{"type":401,"tag":416,"props":509,"children":510},{},[511],{"type":407,"value":512},"要获得块中具体的单元的信息，我们需要从位线和控制栅中选定指定位置，所以就有了位线选择器（Bitline Selector）和控制栅选择器（Control Gate Selector）。这两者共同组成了行地址解析器（Row Decoder）。见下图，电信号从右边输入，通过了控制栅选择器，可以选中一整层的 CTF 单元。再配合位线选择器（图中未展示），就可以按页操作了。",{"type":401,"tag":416,"props":514,"children":515},{},[516],{"type":401,"tag":420,"props":517,"children":520},{"alt":518,"src":519},"选择器","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/20220324204211.png?w=60",[],{"type":401,"tag":416,"props":522,"children":523},{},[524],{"type":407,"value":525},"最后，单页的信号分别由内 CTF 单元对应的位线，经页缓存区（Page Buffer）汇集，就得到了一整页的信息。页缓存器是平面（Plane）的一部分；平面总共包括 VNAND 单元、行解析器、页缓存器和周边电路，而它最终会在 Z 轴方向层叠多层，塞进芯片中。",{"type":401,"tag":416,"props":527,"children":528},{},[529],{"type":401,"tag":420,"props":530,"children":533},{"alt":531,"src":532},"Plane","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/20220324205655.png?w=60",[],{"type":401,"tag":416,"props":535,"children":536},{},[537],{"type":401,"tag":420,"props":538,"children":541},{"alt":539,"src":540},"Chips","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/other/20220324210230.png?w=60",[],{"type":401,"tag":441,"props":543,"children":545},{"id":544},"阅读更多",[546],{"type":407,"value":544},{"type":401,"tag":548,"props":549,"children":550},"ul",{},[551],{"type":401,"tag":552,"props":553,"children":554},"li",{},[555],{"type":401,"tag":476,"props":556,"children":560},{"href":557,"rel":558},"https://www.bilibili.com/video/BV1WR4y1L7io",[559],"nofollow",[561],{"type":407,"value":562},"SSD固态硬盘基本原理 Flash闪存/VNAND是如何工作的",{"type":401,"tag":564,"props":565,"children":568},"section",{"className":566,"dataFootnotes":396},[567],"footnotes",[569,576],{"type":401,"tag":409,"props":570,"children":573},{"className":571,"id":480},[572],"sr-only",[574],{"type":407,"value":575},"Footnotes",{"type":401,"tag":577,"props":578,"children":579},"ol",{},[580],{"type":401,"tag":552,"props":581,"children":583},{"id":582},"user-content-fn-string",[584,586],{"type":407,"value":585},"事实上，由于技术发展十分迅速，三星在 2019 年就可以层叠 136 个 CTF 为一个串了。同理，下文组成结构的数量只是一个示例，不代表真实世界的比例。 ",{"type":401,"tag":476,"props":587,"children":592},{"href":588,"ariaLabel":589,"className":590,"dataFootnoteBackref":396},"#user-content-fnref-string","Back to reference 1",[591],"data-footnote-backref",[593],{"type":407,"value":594},"↩",{"title":396,"searchDepth":596,"depth":596,"links":597},2,[598,599,604],{"id":411,"depth":596,"text":414},{"id":436,"depth":596,"text":439,"children":600},[601,603],{"id":443,"depth":602,"text":443},3,{"id":544,"depth":602,"text":544},{"id":480,"depth":596,"text":575},"markdown","content:7.gists:Storage.md","content","7.gists/Storage.md","7.gists/Storage","md",[612,613],{"_path":341,"title":340,"description":396},{"_path":347,"title":346,"description":396},1741604947064]