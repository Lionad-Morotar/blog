/* * response page padding */
+page-content() {
    box-sizing: border-box;
    max-width: 60rem;
}

@media screen and (min-width: 2000px) {
    +page-content() {
        padding-left: 12rem;
        max-width: 70rem;
    }
}

@media screen and (max-width: 1920px) {
    +page-content() {
        padding-left: 8rem;
    }
}

@media screen and (max-width: 1440px) {
    +page-content() {
        padding-left: 2.5rem;
    }
}

@media (max-width: 750px) {
    +page-content() {
        padding: 1.5rem;
    }
}

