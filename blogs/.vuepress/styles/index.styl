/* Settings */
@import 'setting.styl';
/* Tools */
@import 'tools.styl';
/* Components */
@import 'components/article.styl';
@import 'components/scrollbar.styl';
@import 'components/navbar.styl';
@import 'components/sidebar.styl';
@import 'components/toc.styl';
@import 'components/valine.styl';
@import 'components/crisp.styl';
/* Trumps */
@import 'responsive-em.styl';
@import 'accessbility.styl';
@import 'trumps.styl';

html, body {
  font-family: var(--font-text--general);
  font-size: 16px;
}

#app {
  &.no-move {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
  }
}

/* ********************************************** Selection */
::selection {
  background-color: rgba(230, 230, 250, 0.5);
}

.page-nav {
  font-family: var(--font-sidebar);

  p {
    font-size: 0.875rem !important;
  }
}

.home {
  .content {
    margin: 0 !important;
    padding: 0 !important;
    text-align: center;
  }
}

div[class*='language-'] {
  background-color: rgba(0, 0, 0, 0.85);
}

// 禁用A标签后面携带的链接标志
.icon.outbound {
  display: none;
}

.first-letter {
  overflow-wrap: break-word;
  font-size: 3.25rem;
  font-weight: 500;
  line-height: 5.25rem;
  display: block;
  position: relative;
  float: left;
  margin: 0px 0.75rem 0 0px;
}