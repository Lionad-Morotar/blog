/* Box-Sizing */
.bb {
    box-sizing: border-box;
}

/* Display */
.grid {
    display: grid;
}

.flex {
    display: flex;
}

.flex-cc {
    display: flex;
    justify-content: center;
    align-items: center;
}

.dib {
    display: inline-block;
}

/* Position */
.pr {
    position: relative;
}

.oh {
    overflow: hidden;
}

/* Margin & Padding */
.m0 {
    margin: 0 !important;
}

.mt1em {
    margin-top: 1em;
}

.p010 {
    padding: 0 10px;
}

.p10 {
    padding: 10px;
}

/* Border */
.b1 {
    border: solid 1px;
}

/* Width & Height */
.w100 {
    width: 100%;
}

.h100 {
    height: 100%;
}

/* Color */
.bg-gray {
    background: var(--light-gray);
}

/* Text */
.tac {
    text-align: center;
}

.elipsis-1 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.elipsis-2 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.elipsis-3 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.elipsis-h-2 {
    --line-height: 1.75;
    --bg-color: var(--color-background);
    --dot-color: #eee;
    position: relative;
    display: block;
    margin: 0 auto;
    overflow: hidden;
    height: calc(2em * var(--line-height));
    line-height: var(--line-height);

    &::after {
        content: '...';
        position: absolute;
        bottom: 0;
        right: 0;
        width: 5em;
        height: 1em;
        text-indent: 3em;
        color: var(--dot-color);
        height: calc(1em * var(--line-height));
        background: linear-gradient(to right, rgba(0, 0, 0, 0), var(--bg-color) 50%);
    }
}

.ls0 {
    letter-spacing: 0;
}

.nowrap {
    white-space: nowrap;
}

/* Other */
.vm {
    vertical-align: middle;
}

/* Function */
.no-outline {
    outline: none;
}

.ghost-center {
    &::before {
        display: inline-block;
        content: '';
        height: 100%;
        vertical-align: middle;
    }
}

.bg-shadow {
    &::after {
        --blur: 0.5;
        --dencity: 0.5;
        content: '';
        position: absolute;
        top: 0.5rem;
        left: 0.5rem;
        width: 100%;
        height: 100%;
        background: inherit;
        filter: blur(var(--blur));
        opacity: var(--dencity);
        z-index: -1;
    }
}