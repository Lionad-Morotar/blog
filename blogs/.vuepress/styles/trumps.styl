.navbar {
    .nav-item {
        animation: background-move linear infinite;
        animation-play-state: paused;
        animation-duration: 1s;
    }
}

/* ********************************************** Selection */
::something-padding {
    something-padding: 'do not delete';
}

.navbar {
    .nav-item:hover {
        animation-play-state: running;
    }
}

