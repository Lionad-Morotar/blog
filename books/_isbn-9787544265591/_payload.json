[{"data":1,"prerenderedAt":1033},["ShallowReactive",2],{"navigation":3,"/books/_isbn-9787544265591":158,"/books/_isbn-9787544265591-surround":1024},[4,35,89,95,122,128,152],{"title":5,"_path":6,"children":7},"心流思绪 / Heart Flows","/flows",[8,11,14,17,20,23,26,29,32],{"title":9,"_path":10},"📕 狮子的书单推荐","/flows/books",{"title":12,"_path":13},"🚝 四十二篇系列","/flows/fourty-two",{"title":15,"_path":16},"🌃 长夜梦","/flows/long-night-dream",{"title":18,"_path":19},"🌌 万物联结与幸福感","/flows/everything",{"title":21,"_path":22},"⌛ 偷取时间","/flows/stealing-time-from-god",{"title":24,"_path":25},"🌆 表达和孤独","/flows/expression-and-loneliness",{"title":27,"_path":28},"🌧️ 我的腼腆","/flows/shy",{"title":30,"_path":31},"🥛 新工作，喝新饮料","/flows/drinking-while-thinking",{"title":33,"_path":34},"📝 心流归档","/flows/archive",{"title":36,"_path":37,"children":38},"技术博客 / Coder","/articles",[39,41,44,47,50,53,56,59,62,65,68,71,74,77,80,83,86],{"title":40,"_path":37},"🦁 欢迎",{"title":42,"_path":43},"🌪️ tailwind4 如何兼容预处理器","/articles/tailwind4-with-sass",{"title":45,"_path":46},"🥞 在 tailwind 中使用现代化 CSS Layers","/articles/tailwind-sass-and-css-layer",{"title":48,"_path":49},"💻 本地部署 Qwen 翻译网页","/articles/local-translator",{"title":51,"_path":52},"🧊 模板解析器轻考古","/articles/micro-templating",{"title":54,"_path":55},"Ⓜ️ Mini CSS Parser","/articles/mini-css-parser",{"title":57,"_path":58},"🚩 向AI咨询前端问题","/articles/use-gpt-learn-complex-frontend",{"title":60,"_path":61},"⛸️ 怎样定制复杂组件的自定义滚动条？","/articles/use-scrollbars",{"title":63,"_path":64},"⚖️ 统一多组件库的层叠顺序","/articles/zindex-manager",{"title":66,"_path":67},"🕷️ 滑动验证码破解思路","/articles/crack-the-slider",{"title":69,"_path":70},"🌟 探秘 CSS 光影效果","/articles/css-light-travel",{"title":72,"_path":73},"🍲 设计模式与 JS 魔法锅","/articles/design-patterns-and-js-magic-pot",{"title":75,"_path":76},"🌐 Anysort：灵活、优雅的多属性排序","/articles/anysort-2th",{"title":78,"_path":79},"💫 CSS 幻术 | 抗锯齿","/articles/css-poaa",{"title":81,"_path":82},"❓ 用纯CSS判断鼠标进入的方向","/articles/css-judge-direction",{"title":84,"_path":85},"📝 你本可以少写些 if-else","/articles/no-more-if-else",{"title":87,"_path":88},"📝 技术博客归档","/articles/archive",{"title":90,"_path":91,"children":92},"读书笔记 / Notes","/books",[93],{"title":94,"_path":91},"📕 读书笔记",{"title":96,"_path":97,"children":98},"吉他剧场 / Music","/music",[99,101,104,107,110,113,116,119],{"title":100,"_path":97},"🎸 FingerStyle！",{"title":102,"_path":103},"🌬️ 等待的风","/music/wind",{"title":105,"_path":106},"💕 约定的海洋","/music/ocean",{"title":108,"_path":109},"🎼 Wings~You are the Hero！","/music/wings-you-are-the-hero",{"title":111,"_path":112},"🌏 残酷天使的行动纲领","/music/eva",{"title":114,"_path":115},"🏔️ 奇跡の山","/music/miracle-mountain",{"title":117,"_path":118},"🍷 Wu Wei","/music/wu-wei",{"title":120,"_path":121},"🌅 无题","/music/untitled",{"title":123,"_path":124,"children":125},"知识地图 / Maps","/maps",[126],{"title":127,"_path":124},"🏁 知识地图",{"title":129,"_path":130,"children":131},"造物 / Make","/tools",[132,134,137,140,143,146,149],{"title":133,"_path":130},"🧰 工具收集",{"title":135,"_path":136},"📕 博客","/tools/blog",{"title":138,"_path":139},"🥥 Coconut","/tools/coconut",{"title":141,"_path":142},"🧶 网易云音乐歌单排序","/tools/netease-sorter",{"title":144,"_path":145},"🌐 AnySort","/tools/anysort",{"title":147,"_path":148},"⛸️ UseScrollbar","/tools/use-scrollbar",{"title":150,"_path":151},"👓 Crapto","/tools/crypto-inline",{"title":153,"_path":154,"children":155},"我 / About","/hire",[156],{"title":157,"_path":154},"📬 技术简历",{"_path":159,"_dir":160,"_draft":161,"_partial":162,"_locale":163,"title":164,"description":165,"body":166,"_type":1018,"_id":1019,"_source":1020,"_file":1021,"_stem":1022,"_extension":1023},"/books/_isbn-9787544265591","books",false,true,"","雪国","ISBN 9787544265591",{"type":167,"children":168,"toc":1009},"root",[169,177,187,192,204,209,233,238,248,253,258,268,273,281,286,298,308,313,325,330,335,340,355,360,372,377,385,400,405,410,418,423,428,436,441,446,454,459,464,468,473,481,486,491,499,504,509,519,524,552,557,569,574,578,583,626,631,636,644,649,654,662,667,672,682,687,705,710,715,723,728,738,743,748,756,761,766,789,794,799,807,812,822,827,837,842,847,857,862,870,875,880,943,948,953,976,981,991,996,1001],{"type":170,"tag":171,"props":172,"children":174},"element","h2",{"id":173},"一",[175],{"type":176,"value":173},"text",{"type":170,"tag":178,"props":179,"children":180},"p",{},[181],{"type":170,"tag":182,"props":183,"children":184},"mark",{},[185],{"type":176,"value":186},"穿过长长的县界隧道，就是雪国。夜的底色变成银白。火车在信号所停下了。",{"type":170,"tag":178,"props":188,"children":189},{},[190],{"type":176,"value":191},"对面座位的姑娘站起身，打开了岛村前方的玻璃窗。雪的凉气一下子灌进来。姑娘将身子探出窗外，向远处呼唤。",{"type":170,"tag":178,"props":193,"children":194},{},[195,197,202],{"type":176,"value":196},"说是姑娘，只是岛村这么认为罢了。她身边的男人是她什么人，岛村当然无从知晓。",{"type":170,"tag":182,"props":198,"children":199},{},[200],{"type":176,"value":201},"从举止上看，两人有些像夫妻。不过，男人明显病着。陪伴病人无形中会拉近男女的距离，照顾得越殷勤，看起来就越像夫妻。",{"type":176,"value":203},"一个女人小妈妈似的照顾比自己年长的男人，远看着也让人觉得二人是夫妻。",{"type":170,"tag":178,"props":205,"children":206},{},[207],{"type":176,"value":208},"“一般也有七八尺厚。但大雪的时候，能有一丈二三尺呢。”",{"type":170,"tag":178,"props":210,"children":211},{},[212],{"type":170,"tag":182,"props":213,"children":214},{},[215,217,221,223,226,228,231],{"type":176,"value":216},"“真正的大雪还没来吧？”",{"type":170,"tag":218,"props":219,"children":220},"br",{},[],{"type":176,"value":222},"“对，还在后头呢。现在的雪是前几天下的，一尺多厚，大都融化了。”",{"type":170,"tag":218,"props":224,"children":225},{},[],{"type":176,"value":227},"“还会继续化吗？",{"type":170,"tag":218,"props":229,"children":230},{},[],{"type":176,"value":232},"“大雪说来就来的。”",{"type":170,"tag":171,"props":234,"children":236},{"id":235},"二",[237],{"type":176,"value":235},{"type":170,"tag":178,"props":239,"children":240},{},[241,243],{"type":176,"value":242},"她，连说好要寄给她的舞蹈书都没寄。她必定以为岛村会一笑了之，把她抛诸脑后。按理，岛村应该先道歉，或者找些借口开脱。然而，虽然女人看都不看他就往前走，他却能感受到，她非但没有怪罪他，而且心中满溢着思念。",{"type":170,"tag":182,"props":244,"children":245},{},[246],{"type":176,"value":247},"事到如今，无论再说什么，听起来都有失诚恳，不如就理亏地保持沉默，静静享受重逢的甜蜜。",{"type":170,"tag":178,"props":249,"children":250},{},[251],{"type":176,"value":252},"直到来到楼梯口，他才突然把左拳举到女人眼前，只伸出食指，开口道：“它最记得你了。”...",{"type":170,"tag":178,"props":254,"children":255},{},[256],{"type":176,"value":257},"那时，雪崩的危险期过去了，已是满山新绿的登山季节。木通的新芽还正当季，若再过几日，就吃不到了。",{"type":170,"tag":178,"props":259,"children":260},{},[261,266],{"type":170,"tag":182,"props":262,"children":263},{},[264],{"type":176,"value":265},"岛村终日无所事事，对己对物都越发漫不经心，为了找回那份真挚，他经常独自在山中漫步。",{"type":176,"value":267},"他在县界的山里流连了一周。一晚，他从山上下来，一到温泉旅馆，就立刻派人帮忙叫艺伎来陪酒。女佣告诉他，正赶上庆祝道路竣工，热闹非凡，村子里连兼作戏棚的茧房都被借去摆宴席，十二三名艺伎全忙得不可开交，实在。..",{"type":170,"tag":178,"props":269,"children":270},{},[271],{"type":176,"value":272},"这介绍听着很不可靠，岛村也就没抱什么希望。一个小时后，女佣把那女子带了过来。岛村眼前一亮，赶忙端正坐姿。女佣起身想要离开，女子却拉住了她的衣袖，又让她坐下。",{"type":170,"tag":178,"props":274,"children":275},{},[276],{"type":170,"tag":182,"props":277,"children":278},{},[279],{"type":176,"value":280},"女子看上去出奇地洁净，仿佛连脚趾窝都是干净的。岛村不禁怀疑，这也许是因为自己的眼睛刚看过初夏的群山。",{"type":170,"tag":178,"props":282,"children":283},{},[284],{"type":176,"value":285},"女子的穿着透出些许艺伎的味道。当然，她并没有像艺伎那样将衣摆拖在地上，只穿了件质地柔软的和服单衣，领口抿得规规矩矩。唯有腰带看上去价格不菲，显得格格不入。这副模样，倒越发惹人怜惜了。",{"type":170,"tag":178,"props":287,"children":288},{},[289,291,296],{"type":176,"value":290},"“是啊，真是这样。我出生在港市，而这里又是温泉浴场，”她竟没有反驳，坦率地说道，“客人大都是游客。我虽然还是个孩子，可也听不少人说过。",{"type":170,"tag":182,"props":292,"children":293},{},[294],{"type":176,"value":295},"他们说，分开之后，那些有点喜欢却又没说破的，才总叫人惦念，一直也忘不了。",{"type":176,"value":297},"对方还能想起你，写封信来，也是因为这样。”...",{"type":170,"tag":178,"props":299,"children":300},{},[301,303],{"type":176,"value":302},"他关于日本舞的这番话，促使女子对他敞开了心扉。可以说，他尘封已久的知识，又在现实中派上了用场。",{"type":170,"tag":182,"props":304,"children":305},{},[306],{"type":176,"value":307},"或许他在不知不觉中，把女子当成了西洋舞蹈。",{"type":170,"tag":178,"props":309,"children":310},{},[311],{"type":176,"value":312},"所以，当他发现，那番带着淡淡旅愁的话语似乎刺中了女子的伤心处时，他开始懊悔，就好像自己欺骗了她。",{"type":170,"tag":178,"props":314,"children":315},{},[316,318,323],{"type":176,"value":317},"“我没醉，哼，我才不会醉呢。好难受，我只是太难受了！我心里可明白着呢。啊，给我点水喝。",{"type":170,"tag":182,"props":319,"children":320},{},[321],{"type":176,"value":322},"威士忌不该跟别的酒掺着喝，太上头了，头疼死了！谁知道他们买的是便宜货啊。",{"type":176,"value":324},"”",{"type":170,"tag":171,"props":326,"children":328},{"id":327},"三",[329],{"type":176,"value":327},{"type":170,"tag":178,"props":331,"children":332},{},[333],{"type":176,"value":334},"...",{"type":170,"tag":178,"props":336,"children":337},{},[338],{"type":176,"value":339},"“就是呀。”她满不在乎地脆声答道，直直望着岛村。",{"type":170,"tag":178,"props":341,"children":342},{},[343,348,350],{"type":170,"tag":182,"props":344,"children":345},{},[346],{"type":176,"value":347},"完全是徒劳！岛村想再次高声强调，但不知为何，就在这一刻，他感到一股静谧沁入心脾，仿佛可以听到雪花飘落。他被她吸引了。",{"type":176,"value":349},"他明明知道，对她而言，记日记并非徒劳，却劈头给她一句徒劳。如此，他反倒觉得她的存在更纯粹了。女子口中的小说，和日常所谓“文学”二字毫不相关。她和村里人并无深交，除了偶尔交换着看看妇女杂志，大多数时候都是独自阅读。没有选择，也不求甚解，即使在旅馆的客厅，只要发现小说或者杂志，她都会借阅。",{"type":170,"tag":182,"props":351,"children":352},{},[353],{"type":176,"value":354},"她随口举了几位新作家的名字，大都是岛村知道的。而她却仿佛谈论着遥不可及的外国文学，语调中透着凄凉，好似无欲无求的乞讨。岛村想，自己凭借西洋书籍上的照片和文字，幻想着遥不可及的西洋舞蹈时，大约也是这样吧。",{"type":170,"tag":178,"props":356,"children":357},{},[358],{"type":176,"value":359},"她又说起了从不曾看过的电影和戏剧，说得那么开心，也许数月来她都在企盼一个聊得来的人。她似乎已经忘记，一百九十九天以前，正是因为热衷于这些，促使她情不自禁地投向了岛村的怀抱。现在，她的身体仿佛又一次。..",{"type":170,"tag":178,"props":361,"children":362},{},[363,365,370],{"type":176,"value":364},"一进到",{"type":170,"tag":182,"props":366,"children":367},{},[368],{"type":176,"value":369},"土间",{"type":176,"value":371},"，只觉冷飕飕的，岛村还没看清周围，就被领着爬上了梯子。这是名副其实的梯子，楼上也是名副其实的阁楼。",{"type":170,"tag":178,"props":373,"children":374},{},[375],{"type":176,"value":376},"驹子一口气讲了许多。但是，陪病人回来的姑娘是谁，她自己又为什么同这家人一起生活，仍是只字不提。",{"type":170,"tag":178,"props":378,"children":379},{},[380],{"type":170,"tag":182,"props":381,"children":382},{},[383],{"type":176,"value":384},"屋子好似悬在半空中，驹子说的哪怕只有这些，恐怕也都从四面八方漏出去了。岛村有些坐不住。",{"type":170,"tag":178,"props":386,"children":387},{},[388,390],{"type":176,"value":389},"正要出门时，岛村恍惚瞥见了一样白色的东西。回头细看，原来是个桐木造的三味线琴盒，感觉上比实际尺寸大很多。驹子竟背着这么件又大又长的东西赴宴，实在难以想象。岛村正想着，被烟熏黑了的隔扇打开了。",{"type":170,"tag":182,"props":391,"children":392},{},[393,395,398],{"type":176,"value":394},"“驹子姐，我从它上面跨过去行吗？”",{"type":170,"tag":218,"props":396,"children":397},{},[],{"type":176,"value":399},"澄澈的声音，美得让人心碎，空灵得似乎可以听见回声。",{"type":170,"tag":178,"props":401,"children":402},{},[403],{"type":176,"value":404},"岛村听过这声音。是那位在雪夜里探出窗外呼唤站长的叶子姑娘。",{"type":170,"tag":178,"props":406,"children":407},{},[408],{"type":176,"value":409},"“嗯，听说是的。我不太清楚，不过大家都这么说。”",{"type":170,"tag":178,"props":411,"children":412},{},[413],{"type":170,"tag":182,"props":414,"children":415},{},[416],{"type":176,"value":417},"在温泉旅馆听按摩女谈论艺伎的身世，是再寻常不过的事。但岛村未曾料想到驹子为了未婚夫出来做艺伎，这故事太老套，他总觉得难以置信。也许是因为这与他的道德观念相抵触。",{"type":170,"tag":178,"props":419,"children":420},{},[421],{"type":176,"value":422},"他正想仔细探听一下来龙去脉，按摩女却不肯再说了。",{"type":170,"tag":178,"props":424,"children":425},{},[426],{"type":176,"value":427},"点缀在村子的河岸边、滑雪场和神社各处的杉林，黑黢黢地浮现出来。",{"type":170,"tag":178,"props":429,"children":430},{},[431],{"type":170,"tag":182,"props":432,"children":433},{},[434],{"type":176,"value":435},"岛村沉浸在空虚的惆怅之中。这时，驹子走了进来，身上仿佛带着光和热。",{"type":170,"tag":178,"props":437,"children":438},{},[439],{"type":176,"value":440},"迎接滑雪季的筹备会在这家旅馆举行，驹子说她应召来参加之后的宴会。她在被炉前坐下，蓦地捧住岛村的脸抚摩起来。",{"type":170,"tag":178,"props":442,"children":443},{},[444],{"type":176,"value":445},"“你这人真是奇怪，听说就听说嘛，昨晚为什么没提？”不同于昨日，这回驹子脸上浮现出纯净的笑容。",{"type":170,"tag":178,"props":447,"children":448},{},[449],{"type":170,"tag":182,"props":450,"children":451},{},[452],{"type":176,"value":453},"“除非我看不起你，否则怎么好提起这事呢？”",{"type":170,"tag":178,"props":455,"children":456},{},[457],{"type":176,"value":458},"“你心里可不这么想。东京人净爱撒谎，最讨厌了。”",{"type":170,"tag":171,"props":460,"children":462},{"id":461},"四",[463],{"type":176,"value":461},{"type":170,"tag":178,"props":465,"children":466},{},[467],{"type":176,"value":334},{"type":170,"tag":178,"props":469,"children":470},{},[471],{"type":176,"value":472},"而故意生硬地照着本子念歌词，时而抱怨哪里太冗长、哪里太麻烦，就跳了过去。然而，她还是渐渐着了迷，声音越来越高亢，琴音也越来越清越。岛村几乎战栗起来，想要掩饰自己的懦弱般将头枕在手臂上，侧躺了下去。",{"type":170,"tag":178,"props":474,"children":475},{},[476],{"type":170,"tag":182,"props":477,"children":478},{},[479],{"type":176,"value":480},"曲终，岛村终于松了一口气。啊，这女人迷恋着我呢，这又是多么可悲啊。",{"type":170,"tag":178,"props":482,"children":483},{},[484],{"type":176,"value":485},"难怪之前驹子仰望雪后的晴空感慨：“这样的日子，音色都会不一样呢。”的确，空气的质感完全不同。没有剧场里墙壁的阻隔，没有听众，没有都市的尘嚣。在冬日的清晨，这澄澈的琴音畅通无阻，直到响彻远方积雪皑皑。..",{"type":170,"tag":178,"props":487,"children":488},{},[489],{"type":176,"value":490},"叶子用力点了点头。“要快啊，快点啊！”她说着转身就跑，果断得令人难以置信。",{"type":170,"tag":178,"props":492,"children":493},{},[494],{"type":170,"tag":182,"props":495,"children":496},{},[497],{"type":176,"value":498},"望着她远去的背影，虽不合时宜，岛村心头还是掠过了疑问：为什么这姑娘总是一副严肃认真的模样呢？",{"type":170,"tag":178,"props":500,"children":501},{},[502],{"type":176,"value":503},"她那美得令人心碎的声音，仿佛是某座雪山的回音，久久地萦绕在岛村耳畔。",{"type":170,"tag":178,"props":505,"children":506},{},[507],{"type":176,"value":508},"，正是飞蛾产卵的季节，衣服要及时收起来，不要一直挂在衣架或墙壁上。来到旅馆一看，果然，屋檐下挂着的装饰灯上，伏着六七只黄褐色的大飞蛾。三叠大的外间里，还有几只落在衣架上，个头虽小，躯干却鼓鼓囊囊。",{"type":170,"tag":178,"props":510,"children":511},{},[512,517],{"type":170,"tag":182,"props":513,"children":514},{},[515],{"type":176,"value":516},"窗子依然安着夏天防虫的纱窗。一只飞蛾一动不动地贴在铁纱上，好像被粘住了。它探出羽毛似的黄褐色触角，翅膀是近乎透明的淡绿色，有女人的手指那么长。",{"type":176,"value":518},"窗外，县界连绵的群山被夕阳笼罩着，满目秋色，这些微淡绿反而显得死气沉沉。只有在前翅和后翅重叠的部分，绿色较浓。秋风袭来，那翅膀像薄纸一样轻轻扇动。",{"type":170,"tag":178,"props":520,"children":521},{},[522],{"type":176,"value":523},"“才不呢。我是说，不送你去车站了。”",{"type":170,"tag":178,"props":525,"children":526},{},[527],{"type":170,"tag":182,"props":528,"children":529},{},[530,532,535,537,540,542,545,547,550],{"type":176,"value":531},"“他后来怎么样了？”",{"type":170,"tag":218,"props":533,"children":534},{},[],{"type":176,"value":536},"“当然是死了。”",{"type":170,"tag":218,"props":538,"children":539},{},[],{"type":176,"value":541},"“就在你去送我的时候吗？”",{"type":170,"tag":218,"props":543,"children":544},{},[],{"type":176,"value":546},"“两码事。我没想到送行竟让人那么难受。”",{"type":170,"tag":218,"props":548,"children":549},{},[],{"type":176,"value":551},"“哦。”",{"type":170,"tag":178,"props":553,"children":554},{},[555],{"type":176,"value":556},"“二月十四那天你是怎么回事？你这个骗子。我白白等了那么久。我再也不信你的话了。”...",{"type":170,"tag":178,"props":558,"children":559},{},[560,562,567],{"type":176,"value":561},"“",{"type":170,"tag":182,"props":563,"children":564},{},[565],{"type":176,"value":566},"真没意思啊。以前大家无论做什么都一条心，可现在个人主义渐渐蔓延，大家就像一盘散沙。连这里也变了，合不来的人越来越多。现在菊勇姐也走了，我心里好难过。",{"type":176,"value":568},"从前事事都是她拿主意，最叫座的也是她，没少过六百枝的。主家也很器重她。”",{"type":170,"tag":171,"props":570,"children":572},{"id":571},"五",[573],{"type":176,"value":571},{"type":170,"tag":178,"props":575,"children":576},{},[577],{"type":176,"value":334},{"type":170,"tag":178,"props":579,"children":580},{},[581],{"type":176,"value":582},"“牌子都挂出去了，也没法改啊。”",{"type":170,"tag":178,"props":584,"children":585},{},[586],{"type":170,"tag":182,"props":587,"children":588},{},[589,591,594,596,599,601,604,606,609,611,614,616,619,621,624],{"type":176,"value":590},"岛村拢了拢衣领。驹子注意到了，起身关上窗子。",{"type":170,"tag":218,"props":592,"children":593},{},[],{"type":176,"value":595},"“阿姐也知道你的事。今天还对我说，你那个他来了啊。”",{"type":170,"tag":218,"props":597,"children":598},{},[],{"type":176,"value":600},"“她来辞行，我在账房碰上了她。”",{"type":170,"tag":218,"props":602,"children":603},{},[],{"type":176,"value":605},"“说了什么吗？”",{"type":170,"tag":218,"props":607,"children":608},{},[],{"type":176,"value":610},"“什么也没说。”",{"type":170,"tag":218,"props":612,"children":613},{},[],{"type":176,"value":615},"“你理解我的心情吗？”驹子把刚关上的窗子又倏地推开，重重地坐在了窗台上。",{"type":170,"tag":218,"props":617,"children":618},{},[],{"type":176,"value":620},"岛村半晌才说：“这里的星星和东京的完全不同，好像飘浮在空中。”",{"type":170,"tag":218,"props":622,"children":623},{},[],{"type":176,"value":625},"“今晚有月亮，否则也不是这样的。今年雪特别大。”",{"type":170,"tag":178,"props":627,"children":628},{},[629],{"type":176,"value":630},"“听说火车停了好几次呢。”...",{"type":170,"tag":178,"props":632,"children":633},{},[634],{"type":176,"value":635},"“你要是成家了，恐怕得成天操心呀。”",{"type":170,"tag":178,"props":637,"children":638},{},[639],{"type":170,"tag":182,"props":640,"children":641},{},[642],{"type":176,"value":643},"“大家都这么说。是天性吧。我家四个小孩，东西到处乱扔，我就整天跟在他们屁股后面收拾。我也知道，收拾了他们又会弄乱，但就是看着难受，没法视而不见。只要情况允许，我还是想过得干净些。”",{"type":170,"tag":178,"props":645,"children":646},{},[647],{"type":176,"value":648},"“的确。”...",{"type":170,"tag":178,"props":650,"children":651},{},[652],{"type":176,"value":653},"“一眨眼就过去了。”",{"type":170,"tag":178,"props":655,"children":656},{},[657],{"type":170,"tag":182,"props":658,"children":659},{},[660],{"type":176,"value":661},"“多温暖啊。”岛村搂住了靠过来的驹子。",{"type":170,"tag":178,"props":663,"children":664},{},[665],{"type":176,"value":666},"“我天生就是温暖的嘛。”...",{"type":170,"tag":178,"props":668,"children":669},{},[670],{"type":176,"value":671},"“像我这样，不知能不能生孩子？”驹子认真地问。她的意思是，一直同一个人交往，跟寻常夫妻也没什么两样了。",{"type":170,"tag":178,"props":673,"children":674},{},[675,680],{"type":170,"tag":182,"props":676,"children":677},{},[678],{"type":176,"value":679},"岛村这才知道驹子还有这样一个对象。从她十七岁到现在，已经五年了。",{"type":176,"value":681},"岛村想，原来驹子的无知和无畏正源于此。他从前一直感到难以理解。",{"type":170,"tag":178,"props":683,"children":684},{},[685],{"type":176,"value":686},"驹子猛地翻过身。岛村被压得气闷，想爬起来，可因为刚被惊醒，摇晃两下又倒了下去。脑袋枕在了热乎乎的东西上，岛村吃了一惊。",{"type":170,"tag":178,"props":688,"children":689},{},[690],{"type":170,"tag":182,"props":691,"children":692},{},[693,695,698,700,703],{"type":176,"value":694},"“热得像团火。真是个傻瓜！”",{"type":170,"tag":218,"props":696,"children":697},{},[],{"type":176,"value":699},"“是吗，成了火枕头了？小心烧伤你。”",{"type":170,"tag":218,"props":701,"children":702},{},[],{"type":176,"value":704},"“还真是。”岛村闭上了眼睛。热流一直涌到脑门，他真切地感到自己正活着。与驹子激烈的喘息一起传来的，是所谓的现实。那好似一种憾恨，使人依依难舍，却只能伺机而动，安然等待复仇。",{"type":170,"tag":178,"props":706,"children":707},{},[708],{"type":176,"value":709},"“我说要来，就真的来了吧。”驹子一心重复着这句话，“既然来过了，就可以回去了。我要洗头去啦。”...",{"type":170,"tag":178,"props":711,"children":712},{},[713],{"type":176,"value":714},"“已经三点了吗？从宴会回来，一躺下就睡着了。之前就和朋友们约好了，所以她们才来邀我。她们准以为我跑哪儿去了。”",{"type":170,"tag":178,"props":716,"children":717},{},[718],{"type":170,"tag":182,"props":719,"children":720},{},[721],{"type":176,"value":722},"“她们在等你吗？”",{"type":170,"tag":171,"props":724,"children":726},{"id":725},"六",[727],{"type":176,"value":725},{"type":170,"tag":178,"props":729,"children":730},{},[731,733],{"type":176,"value":732},"然而，",{"type":170,"tag":182,"props":734,"children":735},{},[736],{"type":176,"value":737},"一想到叶子在这里，不知为什么，他对唤来驹子有些顾虑了。尽管驹子爱他，但存在于他自身的虚无，使他认为这爱是一种美的徒劳。也正因为这虚无，他越发觉得，驹子那鲜活的生气如同赤裸的肌肤，贴近了他。他既可怜驹子，也可怜自己。他觉得叶子眼中有一种光芒，不动声色地看透了一切。他也因此被这个女子吸引着。",{"type":170,"tag":178,"props":739,"children":740},{},[741],{"type":176,"value":742},"当然，不用岛村叫，驹子也总是会来找他的。",{"type":170,"tag":178,"props":744,"children":745},{},[746],{"type":176,"value":747},"来岛村房间，去泡澡的时候也会顺道过来。她若是赴宴，就提前一个钟头来，直到女佣叫她才离开。她也常从宴会上偷偷溜出来，对着梳妆台补妆。“得接着干活儿去啦！我是个生意人呢。干活儿赚钱去喽！”说罢才起身。",{"type":170,"tag":178,"props":749,"children":750},{},[751],{"type":170,"tag":182,"props":752,"children":753},{},[754],{"type":176,"value":755},"不知为什么，她回去的时候，总喜欢把带来的装琴拨的小匣子、羽织一类的东西留在他房间。",{"type":170,"tag":178,"props":757,"children":758},{},[759],{"type":176,"value":760},"“昨晚回去，没有热水了。到厨房丁零当啷乱摸了一通，用早上剩下的酱汤泡了饭，就着咸梅吃，特别凉。今早没人叫我起床，睁开眼睛就十点半了。本打算七点起床就来的，结果没来成。”...",{"type":170,"tag":178,"props":762,"children":763},{},[764],{"type":176,"value":765},"真的？”她开心地眯起一只眼睛，“真快活啊！我说去叫酒，就溜出来了，被掌柜的发现，挨骂啦！喝酒太好了，挨骂也不在乎，也不怕人听见我来这儿。啊，怎么一来你这儿，我就忽然醉了呢，讨厌！我还得去赚钱呢。”",{"type":170,"tag":178,"props":767,"children":768},{},[769],{"type":170,"tag":182,"props":770,"children":771},{},[772,774,777,779,782,784,787],{"type":176,"value":773},"“你连指尖都泛着好看的颜色呢。”",{"type":170,"tag":218,"props":775,"children":776},{},[],{"type":176,"value":778},"“真的吗？做生意赚钱嘛。她说什么了吗？妒火在燃烧，可吓人了，看出来了吗？”",{"type":170,"tag":218,"props":780,"children":781},{},[],{"type":176,"value":783},"“你说谁？”",{"type":170,"tag":218,"props":785,"children":786},{},[],{"type":176,"value":788},"“能把人烧死呢。”",{"type":170,"tag":178,"props":790,"children":791},{},[792],{"type":176,"value":793},"“那姑娘也在这里帮忙吧？”...",{"type":170,"tag":178,"props":795,"children":796},{},[797],{"type":176,"value":798},"“看，你又说这种话。”",{"type":170,"tag":178,"props":800,"children":801},{},[802],{"type":170,"tag":182,"props":803,"children":804},{},[805],{"type":176,"value":806},"“我不是开玩笑。我一看到她，就觉得她早晚会成为我的累赘。反正就是有这感觉。你就当你喜欢她，仔细观察观察，一定会和我有一样的想法。”",{"type":170,"tag":178,"props":808,"children":809},{},[810],{"type":176,"value":811},"驹子把手搭在岛村肩上，依偎过去。她突然摇了摇头，说：“不对，要是落在你手上，说不定她就不会发疯了。你把我的累赘带走吧！”...",{"type":170,"tag":178,"props":813,"children":814},{},[815,817],{"type":176,"value":816},"“我这样子，哪里好了？”驹子有些哽咽，",{"type":170,"tag":182,"props":818,"children":819},{},[820],{"type":176,"value":821},"“初次见面时，我觉得你这个人非常讨厌。哪有人说话那么唐突的呢？真是讨厌啊。”",{"type":170,"tag":178,"props":823,"children":824},{},[825],{"type":176,"value":826},"岛村点了点头。",{"type":170,"tag":178,"props":828,"children":829},{},[830,832],{"type":176,"value":831},"消雪融、撤下雪帘的时分，买卖绉纱的市集就开市了。布商们特地从三都赶来，住进固定光顾的旅馆。姑娘们用半年心血织好布，为的就是开市这一天。远近村庄的男男女女聚集在一起，加上各类杂耍和货铺，热闹得如同过节。",{"type":170,"tag":182,"props":833,"children":834},{},[835],{"type":176,"value":836},"绉纱上附着纸牌，写着织布姑娘的名字和住址，还有专人评定品级。这也成了很多人选新娘的依据。姑娘们从小学习织布，却只在十五六岁到二十四五岁之间的年华能织出优质的绉纱。年纪一大，织出的布就失去了光泽。为了跻身一流的织女之列，她们个个专心学习技艺，苦练本领。从旧历十月开始缫丝，到次年二月中旬晾晒完毕，在这段冰封雪冻、别无他事可做的日子里，她们只做这件手工，所以格外用心，倾注了全部爱恋。",{"type":170,"tag":178,"props":838,"children":839},{},[840],{"type":176,"value":841},"岛村身穿的绉纱中，或许就有明治初年甚至江户末期的姑娘织出来的。",{"type":170,"tag":178,"props":843,"children":844},{},[845],{"type":176,"value":846},"所以，织绉纱要在阴冷的季节。古人说，依循阴阳自然的规律，严寒时织就的麻布，暑热时贴身穿上才分外清凉。总是徘徊流连在岛村身旁的驹子，骨子里似乎有种清冽，因此她身上迸发出的炽热感情，才让岛村格外爱怜。",{"type":170,"tag":178,"props":848,"children":849},{},[850,855],{"type":170,"tag":182,"props":851,"children":852},{},[853],{"type":176,"value":854},"然而，这种爱意所能留下的痕迹，恐怕都不及一块绉纱。纵令衣料在工艺品中寿命最短，但只要好好爱惜，五十年前乃至更早的绉纱，穿在身上仍不会褪色。而人的相依相伴，却未必能长久过绉纱。",{"type":176,"value":856},"岛村想得出神，驹子忽然浮现在眼前，俨然已同别的男人生了孩子，是一位母亲了。他吃了一惊，连忙四下看了看，这才定下心来。大概是太累了。",{"type":170,"tag":178,"props":858,"children":859},{},[860],{"type":176,"value":861},"地织布，生活却不似她们织出的绉纱那样清爽明丽。这古老街道给人的印象，正说明了这一点。记载绉纱的古书上，也引用了唐朝秦韬玉的诗。据说，之所以不雇佣纺织女工，也是因为织一匹绉纱过于费时劳力，并不划算。",{"type":170,"tag":178,"props":863,"children":864},{},[865],{"type":170,"tag":182,"props":866,"children":867},{},[868],{"type":176,"value":869},"呕心沥血织布的人早已无声地死去，只留下美丽的绉纱，变成夏季清爽宜人的奢侈衣物，穿在岛村这种人身上。这本不是什么新奇的事，岛村却突然感到不可思议。倾尽爱意的所为，终究会在某一刻鞭打到人身上吗？岛村穿过雁木，走到马路上。",{"type":170,"tag":178,"props":871,"children":872},{},[873],{"type":176,"value":874},"这是典型的旅馆街，古老的街道又直又长，大概能一直通到温泉村。木屋顶上的细木板和防风石与温泉村的一样。",{"type":170,"tag":178,"props":876,"children":877},{},[878],{"type":176,"value":879},"“是吧？你看。”驹子仍旧欢快地抿着嘴笑，把肩膀靠了过来，“为什么不带我走？天冷了，真让人受不了。”",{"type":170,"tag":178,"props":881,"children":882},{},[883],{"type":170,"tag":182,"props":884,"children":885},{},[886,888,891,893,896,898,901,903,906,908,911,913,916,918,921,923,926,928,931,933,936,938,941],{"type":176,"value":887},"突然，远处传来火警声。两人回头望去。",{"type":170,"tag":218,"props":889,"children":890},{},[],{"type":176,"value":892},"“着火了！着火了！”",{"type":170,"tag":218,"props":894,"children":895},{},[],{"type":176,"value":897},"“着火了！”",{"type":170,"tag":218,"props":899,"children":900},{},[],{"type":176,"value":902},"火舌从山下村子的正中央蹿上来。",{"type":170,"tag":218,"props":904,"children":905},{},[],{"type":176,"value":907},"驹子喊了几声，一把握住岛村的手。",{"type":170,"tag":218,"props":909,"children":910},{},[],{"type":176,"value":912},"滚滚上升的浓烟中，火舌时隐时现。火势似乎正在蔓延，吞噬着连排的屋檐。",{"type":170,"tag":218,"props":914,"children":915},{},[],{"type":176,"value":917},"“什么地方？是不是离你以前住的师傅家很近？”",{"type":170,"tag":218,"props":919,"children":920},{},[],{"type":176,"value":922},"“不是。”",{"type":170,"tag":218,"props":924,"children":925},{},[],{"type":176,"value":927},"“到底是哪边？”",{"type":170,"tag":218,"props":929,"children":930},{},[],{"type":176,"value":932},"“更上边，靠车站那边。”",{"type":170,"tag":218,"props":934,"children":935},{},[],{"type":176,"value":937},"火焰穿透屋顶，腾空而起。",{"type":170,"tag":218,"props":939,"children":940},{},[],{"type":176,"value":942},"“哎呀，是茧房，是茧房啊！天啊，天啊！是茧房烧着了！”驹子把脸紧紧贴在岛村肩上，不停地说，“是茧房，是茧房啊！”",{"type":170,"tag":178,"props":944,"children":945},{},[946],{"type":176,"value":947},"火越烧越旺，从高处俯视，在无垠的星空下却好似玩具在燃烧，寂静无声。也正因此，恐惧不断在心底蔓延，仿佛可以听到火焰爆裂的声音。岛村抱住了驹子。",{"type":170,"tag":178,"props":949,"children":950},{},[951],{"type":176,"value":952},"“雪冻住了，小心啊，路很滑。”驹子回头提醒岛村，顺势停下脚步，“对了，你就算了吧，不要去了。我是担心村里人。”",{"type":170,"tag":178,"props":954,"children":955},{},[956],{"type":170,"tag":182,"props":957,"children":958},{},[959,961,964,966,969,971,974],{"type":176,"value":960},"她的话不无道理，岛村有些泄气。一低头，才发现脚边就是铁轨，他们已来到了铁道岔口。",{"type":170,"tag":218,"props":962,"children":963},{},[],{"type":176,"value":965},"“银河真美啊！”",{"type":170,"tag":218,"props":967,"children":968},{},[],{"type":176,"value":970},"驹子低声说。她仰望着天空，又跑了起来。",{"type":170,"tag":218,"props":972,"children":973},{},[],{"type":176,"value":975},"啊，银河！岛村也仰头叹了一声，霎时觉得身体一轻，仿佛要向银河飘去。那光亮看上去那么近，近得似乎可以把岛村捞起。芭蕉周游各地，在荒海上所见的银河，想必就是这般广袤夺目吧。银河飞流直下，要将夜色苍茫的大地赤裸拥入怀中。真是美得惊心动魄。岛村觉得自己渺小的影子，也从地上映在了银河中。银河繁星点点，却那么清澈，每一颗星辰都清晰可见。一片片光亮的云霭，也好似闪烁的银箔，格外分明。岛村的视线被吸入无底的银河深处。",{"type":170,"tag":178,"props":977,"children":978},{},[979],{"type":176,"value":980},"“喂！喂！”岛村呼唤着驹子。",{"type":170,"tag":178,"props":982,"children":983},{},[984,986],{"type":176,"value":985},"在那之前，岛村首先看到的，是叶子的脸庞和红色的箭羽纹和服。她落地时面部朝上，一侧的衣摆掀到膝上。身体着地时，只有小腿痉挛了一下，她已然毫无意识。",{"type":170,"tag":182,"props":987,"children":988},{},[989],{"type":176,"value":990},"不知为何，岛村没有感到死亡，只是觉得在叶子体内，生命在改变形状，而那一刻就是分界。",{"type":170,"tag":178,"props":992,"children":993},{},[994],{"type":176,"value":995},"叶子跌落的二层看台上，又有两三根梁木倾倒下来，在她上方熊熊燃烧。叶子那美得几乎刺人的双眼紧闭着，下颌仰起，颈部修长。火光在她惨白的脸颊上摇曳。",{"type":170,"tag":178,"props":997,"children":998},{},[999],{"type":176,"value":1000},"“这孩子，她疯了！疯了啊！”",{"type":170,"tag":178,"props":1002,"children":1003},{},[1004],{"type":170,"tag":182,"props":1005,"children":1006},{},[1007],{"type":176,"value":1008},"驹子狂乱地叫喊着，岛村想要靠近她，却被一群男人连推带搡，踉跄着跌到了一旁。他们试图从驹子手中将叶子抱走。岛村勉强稳住脚跟，抬头望去。就在那一刻，银河仿佛哗啦一声，朝他的心房倾泻下来。",{"title":163,"searchDepth":1010,"depth":1010,"links":1011},2,[1012,1013,1014,1015,1016,1017],{"id":173,"depth":1010,"text":173},{"id":235,"depth":1010,"text":235},{"id":327,"depth":1010,"text":327},{"id":461,"depth":1010,"text":461},{"id":571,"depth":1010,"text":571},{"id":725,"depth":1010,"text":725},"markdown","content:4.books:_isbn-9787544265591:index.md","content","4.books/_isbn-9787544265591/index.md","4.books/_isbn-9787544265591/index","md",[1025,1029],{"_path":1026,"title":1027,"description":1028},"/books/_isbn-9787522333977","奇点更近","ISBN 9787522333977",{"_path":1030,"title":1031,"description":1032},"/books/_isbn-9787553815268","简读日本史","ISBN 9787553815268",1742808185531]