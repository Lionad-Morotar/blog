[{"data":1,"prerenderedAt":1036},["ShallowReactive",2],{"navigation":3,"/books/_isbn-9787544265591":161,"/books/_isbn-9787544265591-surround":1027},[4,35,92,98,125,131,155],{"title":5,"_path":6,"children":7},"心流思绪 / Heart Flows","/flows",[8,11,14,17,20,23,26,29,32],{"title":9,"_path":10},"📕 狮子的书单推荐","/flows/books",{"title":12,"_path":13},"🚝 四十二篇系列","/flows/fourty-two",{"title":15,"_path":16},"🌃 长夜梦","/flows/long-night-dream",{"title":18,"_path":19},"🌌 万物联结与幸福感","/flows/everything",{"title":21,"_path":22},"⌛ 偷取时间","/flows/stealing-time-from-god",{"title":24,"_path":25},"🌆 表达和孤独","/flows/expression-and-loneliness",{"title":27,"_path":28},"🌧️ 我的腼腆","/flows/shy",{"title":30,"_path":31},"🥛 新工作，喝新饮料","/flows/drinking-while-thinking",{"title":33,"_path":34},"📝 心流归档","/flows/archive",{"title":36,"_path":37,"children":38},"技术博客 / Coder","/articles",[39,41,44,47,50,53,56,59,62,65,68,71,74,77,80,83,86,89],{"title":40,"_path":37},"🦁 欢迎",{"title":42,"_path":43},"🖌️ Blockies Animation","/maps/_fe-framework/motion/blockies-animation",{"title":45,"_path":46},"🌪️ Tailwind v4 如何兼容预处理器","/articles/tailwind4-with-sass",{"title":48,"_path":49},"🥞 在 tailwind 中使用现代化 CSS Layers","/articles/tailwind-sass-and-css-layer",{"title":51,"_path":52},"💻 本地部署 Qwen 翻译网页","/articles/local-translator",{"title":54,"_path":55},"🧊 模板解析器轻考古","/articles/micro-templating",{"title":57,"_path":58},"Ⓜ️ Mini CSS Parser","/articles/mini-css-parser",{"title":60,"_path":61},"🚩 向AI咨询前端问题","/articles/use-gpt-learn-complex-frontend",{"title":63,"_path":64},"⛸️ 怎样定制复杂组件的自定义滚动条？","/articles/use-scrollbars",{"title":66,"_path":67},"⚖️ 统一多组件库的层叠顺序","/articles/zindex-manager",{"title":69,"_path":70},"🕷️ 滑动验证码破解思路","/articles/crack-the-slider",{"title":72,"_path":73},"🌟 探秘 CSS 光影效果","/articles/css-light-travel",{"title":75,"_path":76},"🍲 设计模式与 JS 魔法锅","/articles/design-patterns-and-js-magic-pot",{"title":78,"_path":79},"🌐 Anysort：灵活、优雅的多属性排序","/articles/anysort-2th",{"title":81,"_path":82},"💫 CSS 幻术 | 抗锯齿","/articles/css-poaa",{"title":84,"_path":85},"❓ 用纯CSS判断鼠标进入的方向","/articles/css-judge-direction",{"title":87,"_path":88},"📝 你本可以少写些 if-else","/articles/no-more-if-else",{"title":90,"_path":91},"📝 技术博客归档","/articles/archive",{"title":93,"_path":94,"children":95},"读书笔记 / Notes","/books",[96],{"title":97,"_path":94},"📕 读书笔记",{"title":99,"_path":100,"children":101},"吉他剧场 / Music","/music",[102,104,107,110,113,116,119,122],{"title":103,"_path":100},"🎸 FingerStyle！",{"title":105,"_path":106},"🌬️ 等待的风","/music/wind",{"title":108,"_path":109},"💕 约定的海洋","/music/ocean",{"title":111,"_path":112},"🎼 Wings~You are the Hero！","/music/wings-you-are-the-hero",{"title":114,"_path":115},"🌏 残酷天使的行动纲领","/music/eva",{"title":117,"_path":118},"🏔️ 奇跡の山","/music/miracle-mountain",{"title":120,"_path":121},"🍷 Wu Wei","/music/wu-wei",{"title":123,"_path":124},"🌅 无题","/music/untitled",{"title":126,"_path":127,"children":128},"知识地图 / Maps","/maps",[129],{"title":130,"_path":127},"🏁 知识地图",{"title":132,"_path":133,"children":134},"造物 / Make","/tools",[135,137,140,143,146,149,152],{"title":136,"_path":133},"🧰 工具收集",{"title":138,"_path":139},"📕 博客","/tools/blog",{"title":141,"_path":142},"🥥 Coconut","/tools/coconut",{"title":144,"_path":145},"🧶 网易云音乐歌单排序","/tools/netease-sorter",{"title":147,"_path":148},"🌐 AnySort","/tools/anysort",{"title":150,"_path":151},"⛸️ UseScrollbar","/tools/use-scrollbar",{"title":153,"_path":154},"👓 Crapto","/tools/crypto-inline",{"title":156,"_path":157,"children":158},"我 / About","/hire",[159],{"title":160,"_path":157},"📬 技术简历",{"_path":162,"_dir":163,"_draft":164,"_partial":165,"_locale":166,"title":167,"description":168,"body":169,"_type":1021,"_id":1022,"_source":1023,"_file":1024,"_stem":1025,"_extension":1026},"/books/_isbn-9787544265591","books",false,true,"","雪国","ISBN 9787544265591",{"type":170,"children":171,"toc":1012},"root",[172,180,190,195,207,212,236,241,251,256,261,271,276,284,289,301,311,316,328,333,338,343,358,363,375,380,388,403,408,413,421,426,431,439,444,449,457,462,467,471,476,484,489,494,502,507,512,522,527,555,560,572,577,581,586,629,634,639,647,652,657,665,670,675,685,690,708,713,718,726,731,741,746,751,759,764,769,792,797,802,810,815,825,830,840,845,850,860,865,873,878,883,946,951,956,979,984,994,999,1004],{"type":173,"tag":174,"props":175,"children":177},"element","h2",{"id":176},"一",[178],{"type":179,"value":176},"text",{"type":173,"tag":181,"props":182,"children":183},"p",{},[184],{"type":173,"tag":185,"props":186,"children":187},"mark",{},[188],{"type":179,"value":189},"穿过长长的县界隧道，就是雪国。夜的底色变成银白。火车在信号所停下了。",{"type":173,"tag":181,"props":191,"children":192},{},[193],{"type":179,"value":194},"对面座位的姑娘站起身，打开了岛村前方的玻璃窗。雪的凉气一下子灌进来。姑娘将身子探出窗外，向远处呼唤。",{"type":173,"tag":181,"props":196,"children":197},{},[198,200,205],{"type":179,"value":199},"说是姑娘，只是岛村这么认为罢了。她身边的男人是她什么人，岛村当然无从知晓。",{"type":173,"tag":185,"props":201,"children":202},{},[203],{"type":179,"value":204},"从举止上看，两人有些像夫妻。不过，男人明显病着。陪伴病人无形中会拉近男女的距离，照顾得越殷勤，看起来就越像夫妻。",{"type":179,"value":206},"一个女人小妈妈似的照顾比自己年长的男人，远看着也让人觉得二人是夫妻。",{"type":173,"tag":181,"props":208,"children":209},{},[210],{"type":179,"value":211},"“一般也有七八尺厚。但大雪的时候，能有一丈二三尺呢。”",{"type":173,"tag":181,"props":213,"children":214},{},[215],{"type":173,"tag":185,"props":216,"children":217},{},[218,220,224,226,229,231,234],{"type":179,"value":219},"“真正的大雪还没来吧？”",{"type":173,"tag":221,"props":222,"children":223},"br",{},[],{"type":179,"value":225},"“对，还在后头呢。现在的雪是前几天下的，一尺多厚，大都融化了。”",{"type":173,"tag":221,"props":227,"children":228},{},[],{"type":179,"value":230},"“还会继续化吗？",{"type":173,"tag":221,"props":232,"children":233},{},[],{"type":179,"value":235},"“大雪说来就来的。”",{"type":173,"tag":174,"props":237,"children":239},{"id":238},"二",[240],{"type":179,"value":238},{"type":173,"tag":181,"props":242,"children":243},{},[244,246],{"type":179,"value":245},"她，连说好要寄给她的舞蹈书都没寄。她必定以为岛村会一笑了之，把她抛诸脑后。按理，岛村应该先道歉，或者找些借口开脱。然而，虽然女人看都不看他就往前走，他却能感受到，她非但没有怪罪他，而且心中满溢着思念。",{"type":173,"tag":185,"props":247,"children":248},{},[249],{"type":179,"value":250},"事到如今，无论再说什么，听起来都有失诚恳，不如就理亏地保持沉默，静静享受重逢的甜蜜。",{"type":173,"tag":181,"props":252,"children":253},{},[254],{"type":179,"value":255},"直到来到楼梯口，他才突然把左拳举到女人眼前，只伸出食指，开口道：“它最记得你了。”...",{"type":173,"tag":181,"props":257,"children":258},{},[259],{"type":179,"value":260},"那时，雪崩的危险期过去了，已是满山新绿的登山季节。木通的新芽还正当季，若再过几日，就吃不到了。",{"type":173,"tag":181,"props":262,"children":263},{},[264,269],{"type":173,"tag":185,"props":265,"children":266},{},[267],{"type":179,"value":268},"岛村终日无所事事，对己对物都越发漫不经心，为了找回那份真挚，他经常独自在山中漫步。",{"type":179,"value":270},"他在县界的山里流连了一周。一晚，他从山上下来，一到温泉旅馆，就立刻派人帮忙叫艺伎来陪酒。女佣告诉他，正赶上庆祝道路竣工，热闹非凡，村子里连兼作戏棚的茧房都被借去摆宴席，十二三名艺伎全忙得不可开交，实在。..",{"type":173,"tag":181,"props":272,"children":273},{},[274],{"type":179,"value":275},"这介绍听着很不可靠，岛村也就没抱什么希望。一个小时后，女佣把那女子带了过来。岛村眼前一亮，赶忙端正坐姿。女佣起身想要离开，女子却拉住了她的衣袖，又让她坐下。",{"type":173,"tag":181,"props":277,"children":278},{},[279],{"type":173,"tag":185,"props":280,"children":281},{},[282],{"type":179,"value":283},"女子看上去出奇地洁净，仿佛连脚趾窝都是干净的。岛村不禁怀疑，这也许是因为自己的眼睛刚看过初夏的群山。",{"type":173,"tag":181,"props":285,"children":286},{},[287],{"type":179,"value":288},"女子的穿着透出些许艺伎的味道。当然，她并没有像艺伎那样将衣摆拖在地上，只穿了件质地柔软的和服单衣，领口抿得规规矩矩。唯有腰带看上去价格不菲，显得格格不入。这副模样，倒越发惹人怜惜了。",{"type":173,"tag":181,"props":290,"children":291},{},[292,294,299],{"type":179,"value":293},"“是啊，真是这样。我出生在港市，而这里又是温泉浴场，”她竟没有反驳，坦率地说道，“客人大都是游客。我虽然还是个孩子，可也听不少人说过。",{"type":173,"tag":185,"props":295,"children":296},{},[297],{"type":179,"value":298},"他们说，分开之后，那些有点喜欢却又没说破的，才总叫人惦念，一直也忘不了。",{"type":179,"value":300},"对方还能想起你，写封信来，也是因为这样。”...",{"type":173,"tag":181,"props":302,"children":303},{},[304,306],{"type":179,"value":305},"他关于日本舞的这番话，促使女子对他敞开了心扉。可以说，他尘封已久的知识，又在现实中派上了用场。",{"type":173,"tag":185,"props":307,"children":308},{},[309],{"type":179,"value":310},"或许他在不知不觉中，把女子当成了西洋舞蹈。",{"type":173,"tag":181,"props":312,"children":313},{},[314],{"type":179,"value":315},"所以，当他发现，那番带着淡淡旅愁的话语似乎刺中了女子的伤心处时，他开始懊悔，就好像自己欺骗了她。",{"type":173,"tag":181,"props":317,"children":318},{},[319,321,326],{"type":179,"value":320},"“我没醉，哼，我才不会醉呢。好难受，我只是太难受了！我心里可明白着呢。啊，给我点水喝。",{"type":173,"tag":185,"props":322,"children":323},{},[324],{"type":179,"value":325},"威士忌不该跟别的酒掺着喝，太上头了，头疼死了！谁知道他们买的是便宜货啊。",{"type":179,"value":327},"”",{"type":173,"tag":174,"props":329,"children":331},{"id":330},"三",[332],{"type":179,"value":330},{"type":173,"tag":181,"props":334,"children":335},{},[336],{"type":179,"value":337},"...",{"type":173,"tag":181,"props":339,"children":340},{},[341],{"type":179,"value":342},"“就是呀。”她满不在乎地脆声答道，直直望着岛村。",{"type":173,"tag":181,"props":344,"children":345},{},[346,351,353],{"type":173,"tag":185,"props":347,"children":348},{},[349],{"type":179,"value":350},"完全是徒劳！岛村想再次高声强调，但不知为何，就在这一刻，他感到一股静谧沁入心脾，仿佛可以听到雪花飘落。他被她吸引了。",{"type":179,"value":352},"他明明知道，对她而言，记日记并非徒劳，却劈头给她一句徒劳。如此，他反倒觉得她的存在更纯粹了。女子口中的小说，和日常所谓“文学”二字毫不相关。她和村里人并无深交，除了偶尔交换着看看妇女杂志，大多数时候都是独自阅读。没有选择，也不求甚解，即使在旅馆的客厅，只要发现小说或者杂志，她都会借阅。",{"type":173,"tag":185,"props":354,"children":355},{},[356],{"type":179,"value":357},"她随口举了几位新作家的名字，大都是岛村知道的。而她却仿佛谈论着遥不可及的外国文学，语调中透着凄凉，好似无欲无求的乞讨。岛村想，自己凭借西洋书籍上的照片和文字，幻想着遥不可及的西洋舞蹈时，大约也是这样吧。",{"type":173,"tag":181,"props":359,"children":360},{},[361],{"type":179,"value":362},"她又说起了从不曾看过的电影和戏剧，说得那么开心，也许数月来她都在企盼一个聊得来的人。她似乎已经忘记，一百九十九天以前，正是因为热衷于这些，促使她情不自禁地投向了岛村的怀抱。现在，她的身体仿佛又一次。..",{"type":173,"tag":181,"props":364,"children":365},{},[366,368,373],{"type":179,"value":367},"一进到",{"type":173,"tag":185,"props":369,"children":370},{},[371],{"type":179,"value":372},"土间",{"type":179,"value":374},"，只觉冷飕飕的，岛村还没看清周围，就被领着爬上了梯子。这是名副其实的梯子，楼上也是名副其实的阁楼。",{"type":173,"tag":181,"props":376,"children":377},{},[378],{"type":179,"value":379},"驹子一口气讲了许多。但是，陪病人回来的姑娘是谁，她自己又为什么同这家人一起生活，仍是只字不提。",{"type":173,"tag":181,"props":381,"children":382},{},[383],{"type":173,"tag":185,"props":384,"children":385},{},[386],{"type":179,"value":387},"屋子好似悬在半空中，驹子说的哪怕只有这些，恐怕也都从四面八方漏出去了。岛村有些坐不住。",{"type":173,"tag":181,"props":389,"children":390},{},[391,393],{"type":179,"value":392},"正要出门时，岛村恍惚瞥见了一样白色的东西。回头细看，原来是个桐木造的三味线琴盒，感觉上比实际尺寸大很多。驹子竟背着这么件又大又长的东西赴宴，实在难以想象。岛村正想着，被烟熏黑了的隔扇打开了。",{"type":173,"tag":185,"props":394,"children":395},{},[396,398,401],{"type":179,"value":397},"“驹子姐，我从它上面跨过去行吗？”",{"type":173,"tag":221,"props":399,"children":400},{},[],{"type":179,"value":402},"澄澈的声音，美得让人心碎，空灵得似乎可以听见回声。",{"type":173,"tag":181,"props":404,"children":405},{},[406],{"type":179,"value":407},"岛村听过这声音。是那位在雪夜里探出窗外呼唤站长的叶子姑娘。",{"type":173,"tag":181,"props":409,"children":410},{},[411],{"type":179,"value":412},"“嗯，听说是的。我不太清楚，不过大家都这么说。”",{"type":173,"tag":181,"props":414,"children":415},{},[416],{"type":173,"tag":185,"props":417,"children":418},{},[419],{"type":179,"value":420},"在温泉旅馆听按摩女谈论艺伎的身世，是再寻常不过的事。但岛村未曾料想到驹子为了未婚夫出来做艺伎，这故事太老套，他总觉得难以置信。也许是因为这与他的道德观念相抵触。",{"type":173,"tag":181,"props":422,"children":423},{},[424],{"type":179,"value":425},"他正想仔细探听一下来龙去脉，按摩女却不肯再说了。",{"type":173,"tag":181,"props":427,"children":428},{},[429],{"type":179,"value":430},"点缀在村子的河岸边、滑雪场和神社各处的杉林，黑黢黢地浮现出来。",{"type":173,"tag":181,"props":432,"children":433},{},[434],{"type":173,"tag":185,"props":435,"children":436},{},[437],{"type":179,"value":438},"岛村沉浸在空虚的惆怅之中。这时，驹子走了进来，身上仿佛带着光和热。",{"type":173,"tag":181,"props":440,"children":441},{},[442],{"type":179,"value":443},"迎接滑雪季的筹备会在这家旅馆举行，驹子说她应召来参加之后的宴会。她在被炉前坐下，蓦地捧住岛村的脸抚摩起来。",{"type":173,"tag":181,"props":445,"children":446},{},[447],{"type":179,"value":448},"“你这人真是奇怪，听说就听说嘛，昨晚为什么没提？”不同于昨日，这回驹子脸上浮现出纯净的笑容。",{"type":173,"tag":181,"props":450,"children":451},{},[452],{"type":173,"tag":185,"props":453,"children":454},{},[455],{"type":179,"value":456},"“除非我看不起你，否则怎么好提起这事呢？”",{"type":173,"tag":181,"props":458,"children":459},{},[460],{"type":179,"value":461},"“你心里可不这么想。东京人净爱撒谎，最讨厌了。”",{"type":173,"tag":174,"props":463,"children":465},{"id":464},"四",[466],{"type":179,"value":464},{"type":173,"tag":181,"props":468,"children":469},{},[470],{"type":179,"value":337},{"type":173,"tag":181,"props":472,"children":473},{},[474],{"type":179,"value":475},"而故意生硬地照着本子念歌词，时而抱怨哪里太冗长、哪里太麻烦，就跳了过去。然而，她还是渐渐着了迷，声音越来越高亢，琴音也越来越清越。岛村几乎战栗起来，想要掩饰自己的懦弱般将头枕在手臂上，侧躺了下去。",{"type":173,"tag":181,"props":477,"children":478},{},[479],{"type":173,"tag":185,"props":480,"children":481},{},[482],{"type":179,"value":483},"曲终，岛村终于松了一口气。啊，这女人迷恋着我呢，这又是多么可悲啊。",{"type":173,"tag":181,"props":485,"children":486},{},[487],{"type":179,"value":488},"难怪之前驹子仰望雪后的晴空感慨：“这样的日子，音色都会不一样呢。”的确，空气的质感完全不同。没有剧场里墙壁的阻隔，没有听众，没有都市的尘嚣。在冬日的清晨，这澄澈的琴音畅通无阻，直到响彻远方积雪皑皑。..",{"type":173,"tag":181,"props":490,"children":491},{},[492],{"type":179,"value":493},"叶子用力点了点头。“要快啊，快点啊！”她说着转身就跑，果断得令人难以置信。",{"type":173,"tag":181,"props":495,"children":496},{},[497],{"type":173,"tag":185,"props":498,"children":499},{},[500],{"type":179,"value":501},"望着她远去的背影，虽不合时宜，岛村心头还是掠过了疑问：为什么这姑娘总是一副严肃认真的模样呢？",{"type":173,"tag":181,"props":503,"children":504},{},[505],{"type":179,"value":506},"她那美得令人心碎的声音，仿佛是某座雪山的回音，久久地萦绕在岛村耳畔。",{"type":173,"tag":181,"props":508,"children":509},{},[510],{"type":179,"value":511},"，正是飞蛾产卵的季节，衣服要及时收起来，不要一直挂在衣架或墙壁上。来到旅馆一看，果然，屋檐下挂着的装饰灯上，伏着六七只黄褐色的大飞蛾。三叠大的外间里，还有几只落在衣架上，个头虽小，躯干却鼓鼓囊囊。",{"type":173,"tag":181,"props":513,"children":514},{},[515,520],{"type":173,"tag":185,"props":516,"children":517},{},[518],{"type":179,"value":519},"窗子依然安着夏天防虫的纱窗。一只飞蛾一动不动地贴在铁纱上，好像被粘住了。它探出羽毛似的黄褐色触角，翅膀是近乎透明的淡绿色，有女人的手指那么长。",{"type":179,"value":521},"窗外，县界连绵的群山被夕阳笼罩着，满目秋色，这些微淡绿反而显得死气沉沉。只有在前翅和后翅重叠的部分，绿色较浓。秋风袭来，那翅膀像薄纸一样轻轻扇动。",{"type":173,"tag":181,"props":523,"children":524},{},[525],{"type":179,"value":526},"“才不呢。我是说，不送你去车站了。”",{"type":173,"tag":181,"props":528,"children":529},{},[530],{"type":173,"tag":185,"props":531,"children":532},{},[533,535,538,540,543,545,548,550,553],{"type":179,"value":534},"“他后来怎么样了？”",{"type":173,"tag":221,"props":536,"children":537},{},[],{"type":179,"value":539},"“当然是死了。”",{"type":173,"tag":221,"props":541,"children":542},{},[],{"type":179,"value":544},"“就在你去送我的时候吗？”",{"type":173,"tag":221,"props":546,"children":547},{},[],{"type":179,"value":549},"“两码事。我没想到送行竟让人那么难受。”",{"type":173,"tag":221,"props":551,"children":552},{},[],{"type":179,"value":554},"“哦。”",{"type":173,"tag":181,"props":556,"children":557},{},[558],{"type":179,"value":559},"“二月十四那天你是怎么回事？你这个骗子。我白白等了那么久。我再也不信你的话了。”...",{"type":173,"tag":181,"props":561,"children":562},{},[563,565,570],{"type":179,"value":564},"“",{"type":173,"tag":185,"props":566,"children":567},{},[568],{"type":179,"value":569},"真没意思啊。以前大家无论做什么都一条心，可现在个人主义渐渐蔓延，大家就像一盘散沙。连这里也变了，合不来的人越来越多。现在菊勇姐也走了，我心里好难过。",{"type":179,"value":571},"从前事事都是她拿主意，最叫座的也是她，没少过六百枝的。主家也很器重她。”",{"type":173,"tag":174,"props":573,"children":575},{"id":574},"五",[576],{"type":179,"value":574},{"type":173,"tag":181,"props":578,"children":579},{},[580],{"type":179,"value":337},{"type":173,"tag":181,"props":582,"children":583},{},[584],{"type":179,"value":585},"“牌子都挂出去了，也没法改啊。”",{"type":173,"tag":181,"props":587,"children":588},{},[589],{"type":173,"tag":185,"props":590,"children":591},{},[592,594,597,599,602,604,607,609,612,614,617,619,622,624,627],{"type":179,"value":593},"岛村拢了拢衣领。驹子注意到了，起身关上窗子。",{"type":173,"tag":221,"props":595,"children":596},{},[],{"type":179,"value":598},"“阿姐也知道你的事。今天还对我说，你那个他来了啊。”",{"type":173,"tag":221,"props":600,"children":601},{},[],{"type":179,"value":603},"“她来辞行，我在账房碰上了她。”",{"type":173,"tag":221,"props":605,"children":606},{},[],{"type":179,"value":608},"“说了什么吗？”",{"type":173,"tag":221,"props":610,"children":611},{},[],{"type":179,"value":613},"“什么也没说。”",{"type":173,"tag":221,"props":615,"children":616},{},[],{"type":179,"value":618},"“你理解我的心情吗？”驹子把刚关上的窗子又倏地推开，重重地坐在了窗台上。",{"type":173,"tag":221,"props":620,"children":621},{},[],{"type":179,"value":623},"岛村半晌才说：“这里的星星和东京的完全不同，好像飘浮在空中。”",{"type":173,"tag":221,"props":625,"children":626},{},[],{"type":179,"value":628},"“今晚有月亮，否则也不是这样的。今年雪特别大。”",{"type":173,"tag":181,"props":630,"children":631},{},[632],{"type":179,"value":633},"“听说火车停了好几次呢。”...",{"type":173,"tag":181,"props":635,"children":636},{},[637],{"type":179,"value":638},"“你要是成家了，恐怕得成天操心呀。”",{"type":173,"tag":181,"props":640,"children":641},{},[642],{"type":173,"tag":185,"props":643,"children":644},{},[645],{"type":179,"value":646},"“大家都这么说。是天性吧。我家四个小孩，东西到处乱扔，我就整天跟在他们屁股后面收拾。我也知道，收拾了他们又会弄乱，但就是看着难受，没法视而不见。只要情况允许，我还是想过得干净些。”",{"type":173,"tag":181,"props":648,"children":649},{},[650],{"type":179,"value":651},"“的确。”...",{"type":173,"tag":181,"props":653,"children":654},{},[655],{"type":179,"value":656},"“一眨眼就过去了。”",{"type":173,"tag":181,"props":658,"children":659},{},[660],{"type":173,"tag":185,"props":661,"children":662},{},[663],{"type":179,"value":664},"“多温暖啊。”岛村搂住了靠过来的驹子。",{"type":173,"tag":181,"props":666,"children":667},{},[668],{"type":179,"value":669},"“我天生就是温暖的嘛。”...",{"type":173,"tag":181,"props":671,"children":672},{},[673],{"type":179,"value":674},"“像我这样，不知能不能生孩子？”驹子认真地问。她的意思是，一直同一个人交往，跟寻常夫妻也没什么两样了。",{"type":173,"tag":181,"props":676,"children":677},{},[678,683],{"type":173,"tag":185,"props":679,"children":680},{},[681],{"type":179,"value":682},"岛村这才知道驹子还有这样一个对象。从她十七岁到现在，已经五年了。",{"type":179,"value":684},"岛村想，原来驹子的无知和无畏正源于此。他从前一直感到难以理解。",{"type":173,"tag":181,"props":686,"children":687},{},[688],{"type":179,"value":689},"驹子猛地翻过身。岛村被压得气闷，想爬起来，可因为刚被惊醒，摇晃两下又倒了下去。脑袋枕在了热乎乎的东西上，岛村吃了一惊。",{"type":173,"tag":181,"props":691,"children":692},{},[693],{"type":173,"tag":185,"props":694,"children":695},{},[696,698,701,703,706],{"type":179,"value":697},"“热得像团火。真是个傻瓜！”",{"type":173,"tag":221,"props":699,"children":700},{},[],{"type":179,"value":702},"“是吗，成了火枕头了？小心烧伤你。”",{"type":173,"tag":221,"props":704,"children":705},{},[],{"type":179,"value":707},"“还真是。”岛村闭上了眼睛。热流一直涌到脑门，他真切地感到自己正活着。与驹子激烈的喘息一起传来的，是所谓的现实。那好似一种憾恨，使人依依难舍，却只能伺机而动，安然等待复仇。",{"type":173,"tag":181,"props":709,"children":710},{},[711],{"type":179,"value":712},"“我说要来，就真的来了吧。”驹子一心重复着这句话，“既然来过了，就可以回去了。我要洗头去啦。”...",{"type":173,"tag":181,"props":714,"children":715},{},[716],{"type":179,"value":717},"“已经三点了吗？从宴会回来，一躺下就睡着了。之前就和朋友们约好了，所以她们才来邀我。她们准以为我跑哪儿去了。”",{"type":173,"tag":181,"props":719,"children":720},{},[721],{"type":173,"tag":185,"props":722,"children":723},{},[724],{"type":179,"value":725},"“她们在等你吗？”",{"type":173,"tag":174,"props":727,"children":729},{"id":728},"六",[730],{"type":179,"value":728},{"type":173,"tag":181,"props":732,"children":733},{},[734,736],{"type":179,"value":735},"然而，",{"type":173,"tag":185,"props":737,"children":738},{},[739],{"type":179,"value":740},"一想到叶子在这里，不知为什么，他对唤来驹子有些顾虑了。尽管驹子爱他，但存在于他自身的虚无，使他认为这爱是一种美的徒劳。也正因为这虚无，他越发觉得，驹子那鲜活的生气如同赤裸的肌肤，贴近了他。他既可怜驹子，也可怜自己。他觉得叶子眼中有一种光芒，不动声色地看透了一切。他也因此被这个女子吸引着。",{"type":173,"tag":181,"props":742,"children":743},{},[744],{"type":179,"value":745},"当然，不用岛村叫，驹子也总是会来找他的。",{"type":173,"tag":181,"props":747,"children":748},{},[749],{"type":179,"value":750},"来岛村房间，去泡澡的时候也会顺道过来。她若是赴宴，就提前一个钟头来，直到女佣叫她才离开。她也常从宴会上偷偷溜出来，对着梳妆台补妆。“得接着干活儿去啦！我是个生意人呢。干活儿赚钱去喽！”说罢才起身。",{"type":173,"tag":181,"props":752,"children":753},{},[754],{"type":173,"tag":185,"props":755,"children":756},{},[757],{"type":179,"value":758},"不知为什么，她回去的时候，总喜欢把带来的装琴拨的小匣子、羽织一类的东西留在他房间。",{"type":173,"tag":181,"props":760,"children":761},{},[762],{"type":179,"value":763},"“昨晚回去，没有热水了。到厨房丁零当啷乱摸了一通，用早上剩下的酱汤泡了饭，就着咸梅吃，特别凉。今早没人叫我起床，睁开眼睛就十点半了。本打算七点起床就来的，结果没来成。”...",{"type":173,"tag":181,"props":765,"children":766},{},[767],{"type":179,"value":768},"真的？”她开心地眯起一只眼睛，“真快活啊！我说去叫酒，就溜出来了，被掌柜的发现，挨骂啦！喝酒太好了，挨骂也不在乎，也不怕人听见我来这儿。啊，怎么一来你这儿，我就忽然醉了呢，讨厌！我还得去赚钱呢。”",{"type":173,"tag":181,"props":770,"children":771},{},[772],{"type":173,"tag":185,"props":773,"children":774},{},[775,777,780,782,785,787,790],{"type":179,"value":776},"“你连指尖都泛着好看的颜色呢。”",{"type":173,"tag":221,"props":778,"children":779},{},[],{"type":179,"value":781},"“真的吗？做生意赚钱嘛。她说什么了吗？妒火在燃烧，可吓人了，看出来了吗？”",{"type":173,"tag":221,"props":783,"children":784},{},[],{"type":179,"value":786},"“你说谁？”",{"type":173,"tag":221,"props":788,"children":789},{},[],{"type":179,"value":791},"“能把人烧死呢。”",{"type":173,"tag":181,"props":793,"children":794},{},[795],{"type":179,"value":796},"“那姑娘也在这里帮忙吧？”...",{"type":173,"tag":181,"props":798,"children":799},{},[800],{"type":179,"value":801},"“看，你又说这种话。”",{"type":173,"tag":181,"props":803,"children":804},{},[805],{"type":173,"tag":185,"props":806,"children":807},{},[808],{"type":179,"value":809},"“我不是开玩笑。我一看到她，就觉得她早晚会成为我的累赘。反正就是有这感觉。你就当你喜欢她，仔细观察观察，一定会和我有一样的想法。”",{"type":173,"tag":181,"props":811,"children":812},{},[813],{"type":179,"value":814},"驹子把手搭在岛村肩上，依偎过去。她突然摇了摇头，说：“不对，要是落在你手上，说不定她就不会发疯了。你把我的累赘带走吧！”...",{"type":173,"tag":181,"props":816,"children":817},{},[818,820],{"type":179,"value":819},"“我这样子，哪里好了？”驹子有些哽咽，",{"type":173,"tag":185,"props":821,"children":822},{},[823],{"type":179,"value":824},"“初次见面时，我觉得你这个人非常讨厌。哪有人说话那么唐突的呢？真是讨厌啊。”",{"type":173,"tag":181,"props":826,"children":827},{},[828],{"type":179,"value":829},"岛村点了点头。",{"type":173,"tag":181,"props":831,"children":832},{},[833,835],{"type":179,"value":834},"消雪融、撤下雪帘的时分，买卖绉纱的市集就开市了。布商们特地从三都赶来，住进固定光顾的旅馆。姑娘们用半年心血织好布，为的就是开市这一天。远近村庄的男男女女聚集在一起，加上各类杂耍和货铺，热闹得如同过节。",{"type":173,"tag":185,"props":836,"children":837},{},[838],{"type":179,"value":839},"绉纱上附着纸牌，写着织布姑娘的名字和住址，还有专人评定品级。这也成了很多人选新娘的依据。姑娘们从小学习织布，却只在十五六岁到二十四五岁之间的年华能织出优质的绉纱。年纪一大，织出的布就失去了光泽。为了跻身一流的织女之列，她们个个专心学习技艺，苦练本领。从旧历十月开始缫丝，到次年二月中旬晾晒完毕，在这段冰封雪冻、别无他事可做的日子里，她们只做这件手工，所以格外用心，倾注了全部爱恋。",{"type":173,"tag":181,"props":841,"children":842},{},[843],{"type":179,"value":844},"岛村身穿的绉纱中，或许就有明治初年甚至江户末期的姑娘织出来的。",{"type":173,"tag":181,"props":846,"children":847},{},[848],{"type":179,"value":849},"所以，织绉纱要在阴冷的季节。古人说，依循阴阳自然的规律，严寒时织就的麻布，暑热时贴身穿上才分外清凉。总是徘徊流连在岛村身旁的驹子，骨子里似乎有种清冽，因此她身上迸发出的炽热感情，才让岛村格外爱怜。",{"type":173,"tag":181,"props":851,"children":852},{},[853,858],{"type":173,"tag":185,"props":854,"children":855},{},[856],{"type":179,"value":857},"然而，这种爱意所能留下的痕迹，恐怕都不及一块绉纱。纵令衣料在工艺品中寿命最短，但只要好好爱惜，五十年前乃至更早的绉纱，穿在身上仍不会褪色。而人的相依相伴，却未必能长久过绉纱。",{"type":179,"value":859},"岛村想得出神，驹子忽然浮现在眼前，俨然已同别的男人生了孩子，是一位母亲了。他吃了一惊，连忙四下看了看，这才定下心来。大概是太累了。",{"type":173,"tag":181,"props":861,"children":862},{},[863],{"type":179,"value":864},"地织布，生活却不似她们织出的绉纱那样清爽明丽。这古老街道给人的印象，正说明了这一点。记载绉纱的古书上，也引用了唐朝秦韬玉的诗。据说，之所以不雇佣纺织女工，也是因为织一匹绉纱过于费时劳力，并不划算。",{"type":173,"tag":181,"props":866,"children":867},{},[868],{"type":173,"tag":185,"props":869,"children":870},{},[871],{"type":179,"value":872},"呕心沥血织布的人早已无声地死去，只留下美丽的绉纱，变成夏季清爽宜人的奢侈衣物，穿在岛村这种人身上。这本不是什么新奇的事，岛村却突然感到不可思议。倾尽爱意的所为，终究会在某一刻鞭打到人身上吗？岛村穿过雁木，走到马路上。",{"type":173,"tag":181,"props":874,"children":875},{},[876],{"type":179,"value":877},"这是典型的旅馆街，古老的街道又直又长，大概能一直通到温泉村。木屋顶上的细木板和防风石与温泉村的一样。",{"type":173,"tag":181,"props":879,"children":880},{},[881],{"type":179,"value":882},"“是吧？你看。”驹子仍旧欢快地抿着嘴笑，把肩膀靠了过来，“为什么不带我走？天冷了，真让人受不了。”",{"type":173,"tag":181,"props":884,"children":885},{},[886],{"type":173,"tag":185,"props":887,"children":888},{},[889,891,894,896,899,901,904,906,909,911,914,916,919,921,924,926,929,931,934,936,939,941,944],{"type":179,"value":890},"突然，远处传来火警声。两人回头望去。",{"type":173,"tag":221,"props":892,"children":893},{},[],{"type":179,"value":895},"“着火了！着火了！”",{"type":173,"tag":221,"props":897,"children":898},{},[],{"type":179,"value":900},"“着火了！”",{"type":173,"tag":221,"props":902,"children":903},{},[],{"type":179,"value":905},"火舌从山下村子的正中央蹿上来。",{"type":173,"tag":221,"props":907,"children":908},{},[],{"type":179,"value":910},"驹子喊了几声，一把握住岛村的手。",{"type":173,"tag":221,"props":912,"children":913},{},[],{"type":179,"value":915},"滚滚上升的浓烟中，火舌时隐时现。火势似乎正在蔓延，吞噬着连排的屋檐。",{"type":173,"tag":221,"props":917,"children":918},{},[],{"type":179,"value":920},"“什么地方？是不是离你以前住的师傅家很近？”",{"type":173,"tag":221,"props":922,"children":923},{},[],{"type":179,"value":925},"“不是。”",{"type":173,"tag":221,"props":927,"children":928},{},[],{"type":179,"value":930},"“到底是哪边？”",{"type":173,"tag":221,"props":932,"children":933},{},[],{"type":179,"value":935},"“更上边，靠车站那边。”",{"type":173,"tag":221,"props":937,"children":938},{},[],{"type":179,"value":940},"火焰穿透屋顶，腾空而起。",{"type":173,"tag":221,"props":942,"children":943},{},[],{"type":179,"value":945},"“哎呀，是茧房，是茧房啊！天啊，天啊！是茧房烧着了！”驹子把脸紧紧贴在岛村肩上，不停地说，“是茧房，是茧房啊！”",{"type":173,"tag":181,"props":947,"children":948},{},[949],{"type":179,"value":950},"火越烧越旺，从高处俯视，在无垠的星空下却好似玩具在燃烧，寂静无声。也正因此，恐惧不断在心底蔓延，仿佛可以听到火焰爆裂的声音。岛村抱住了驹子。",{"type":173,"tag":181,"props":952,"children":953},{},[954],{"type":179,"value":955},"“雪冻住了，小心啊，路很滑。”驹子回头提醒岛村，顺势停下脚步，“对了，你就算了吧，不要去了。我是担心村里人。”",{"type":173,"tag":181,"props":957,"children":958},{},[959],{"type":173,"tag":185,"props":960,"children":961},{},[962,964,967,969,972,974,977],{"type":179,"value":963},"她的话不无道理，岛村有些泄气。一低头，才发现脚边就是铁轨，他们已来到了铁道岔口。",{"type":173,"tag":221,"props":965,"children":966},{},[],{"type":179,"value":968},"“银河真美啊！”",{"type":173,"tag":221,"props":970,"children":971},{},[],{"type":179,"value":973},"驹子低声说。她仰望着天空，又跑了起来。",{"type":173,"tag":221,"props":975,"children":976},{},[],{"type":179,"value":978},"啊，银河！岛村也仰头叹了一声，霎时觉得身体一轻，仿佛要向银河飘去。那光亮看上去那么近，近得似乎可以把岛村捞起。芭蕉周游各地，在荒海上所见的银河，想必就是这般广袤夺目吧。银河飞流直下，要将夜色苍茫的大地赤裸拥入怀中。真是美得惊心动魄。岛村觉得自己渺小的影子，也从地上映在了银河中。银河繁星点点，却那么清澈，每一颗星辰都清晰可见。一片片光亮的云霭，也好似闪烁的银箔，格外分明。岛村的视线被吸入无底的银河深处。",{"type":173,"tag":181,"props":980,"children":981},{},[982],{"type":179,"value":983},"“喂！喂！”岛村呼唤着驹子。",{"type":173,"tag":181,"props":985,"children":986},{},[987,989],{"type":179,"value":988},"在那之前，岛村首先看到的，是叶子的脸庞和红色的箭羽纹和服。她落地时面部朝上，一侧的衣摆掀到膝上。身体着地时，只有小腿痉挛了一下，她已然毫无意识。",{"type":173,"tag":185,"props":990,"children":991},{},[992],{"type":179,"value":993},"不知为何，岛村没有感到死亡，只是觉得在叶子体内，生命在改变形状，而那一刻就是分界。",{"type":173,"tag":181,"props":995,"children":996},{},[997],{"type":179,"value":998},"叶子跌落的二层看台上，又有两三根梁木倾倒下来，在她上方熊熊燃烧。叶子那美得几乎刺人的双眼紧闭着，下颌仰起，颈部修长。火光在她惨白的脸颊上摇曳。",{"type":173,"tag":181,"props":1000,"children":1001},{},[1002],{"type":179,"value":1003},"“这孩子，她疯了！疯了啊！”",{"type":173,"tag":181,"props":1005,"children":1006},{},[1007],{"type":173,"tag":185,"props":1008,"children":1009},{},[1010],{"type":179,"value":1011},"驹子狂乱地叫喊着，岛村想要靠近她，却被一群男人连推带搡，踉跄着跌到了一旁。他们试图从驹子手中将叶子抱走。岛村勉强稳住脚跟，抬头望去。就在那一刻，银河仿佛哗啦一声，朝他的心房倾泻下来。",{"title":166,"searchDepth":1013,"depth":1013,"links":1014},2,[1015,1016,1017,1018,1019,1020],{"id":176,"depth":1013,"text":176},{"id":238,"depth":1013,"text":238},{"id":330,"depth":1013,"text":330},{"id":464,"depth":1013,"text":464},{"id":574,"depth":1013,"text":574},{"id":728,"depth":1013,"text":728},"markdown","content:4.books:_isbn-9787544265591:index.md","content","4.books/_isbn-9787544265591/index.md","4.books/_isbn-9787544265591/index","md",[1028,1032],{"_path":1029,"title":1030,"description":1031},"/books/_isbn-9787522333977","奇点更近","ISBN 9787522333977",{"_path":1033,"title":1034,"description":1035},"/books/_isbn-9787553815268","简读日本史","ISBN 9787553815268",1749721427743]