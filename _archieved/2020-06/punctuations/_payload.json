ists/web-components",{"title":388,"_path":389},"Windows","/gists/windows",{"title":391,"_path":392},"查缺补漏","/gists/wrong",{"title":394,"_path":395,"children":396},"代码笔记 / Gists","/source-code",[397],{"title":398,"_path":395},"🚄 代码笔记",{"title":400,"_path":401,"children":402},"我 / Abount","/hire",[403],{"title":404,"_path":401},"📬 技术简历",{"title":406,"_path":407,"children":408},"todo","/todo",[409],{"title":406,"_path":407},{"_path":411,"_dir":412,"_draft":413,"_partial":414,"_locale":415,"title":416,"description":415,"body":417,"_type":1407,"_id":1408,"_source":1409,"_file":1410,"_stem":1411,"_extension":1412},"/_archieved/2020-06/punctuations","2020-06",false,true,"","✒️ 关于标点的那些事儿",{"type":418,"children":419,"toc":1396},"root",[420,428,434,439,445,450,456,461,469,474,479,487,492,497,502,507,520,526,539,558,566,571,1221,1225,1230,1236,1249,1254,1259,1264,1269,1274,1279,1284,1299,1307,1312,1324,1329,1376,1390],{"type":421,"tag":422,"props":423,"children":425},"element","h2",{"id":424},"使用直排引号",[426],{"type":427,"value":424},"text",{"type":421,"tag":429,"props":430,"children":431},"p",{},[432],{"type":427,"value":433},"打代码的时候，频繁的中英文切换会导致输入效率降低，若一致使用英文标点（一个英文标点加一个空格）则可以增加编码速度。不过，习惯在编程时持续使用英文标点后，写博客时自然会保持这种惯性，这导致了我前期的博客页面崩坏——尽管版面的节奏要流畅许多，但英文标点在中文版面上的美观程度远远不及中文标点。",{"type":421,"tag":429,"props":435,"children":436},{},[437],{"type":427,"value":438},"以上是我去年因为“使用英文标点”而产生的疑惑。现在来说，这个问题几乎已经算解决了：我现在已经习惯在中文输入时使用中文标点，而编码工作中尽量不使用中文。不过，现在，我又发现了一个新的问题，关于博客中的中文引号不美观的问题。",{"type":421,"tag":440,"props":441,"children":443},"h3",{"id":442},"起因",[444],{"type":427,"value":442},{"type":421,"tag":429,"props":446,"children":447},{},[448],{"type":427,"value":449},"应该有读者已经发现，我博客中引用的思源宋中的映射少了中文引号。这也就意味着，页面上所有中文引号，都会回退成其它字体引号的形态。见下图最后一行文字。",{"type":421,"tag":451,"props":452,"children":455},"img",{"src":453,"alt":454},"https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/200619/browser_06_20_003.png","页面上所有中文引号，都会回退成其它字体的引号",[],{"type":421,"tag":429,"props":457,"children":458},{},[459],{"type":427,"value":460},"这个引号可能来自某种英文非衬线体字体，看起来圆溜溜的，实在和思源宋不搭。接着我将博客中缺失的字体引用补充完整，界面成了这个样子：",{"type":421,"tag":429,"props":462,"children":463},{},[464],{"type":421,"tag":451,"props":465,"children":468},{"alt":466,"src":467},"逗号加弯引号","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/200619/browser_06_20_012.png",[],{"type":421,"tag":429,"props":470,"children":471},{},[472],{"type":427,"value":473},"引号依旧圆溜溜的。于是，我想着能不能换种特殊的字体，专门用来显示中文引号。",{"type":421,"tag":429,"props":475,"children":476},{},[477],{"type":427,"value":478},"一番探索之后，我找到了“直角引号”这货。我决定把博客中所有的中文引号都替换成直角引号，以增加美观度。尽管两个邻接的逗号和直角引号间有空白过多之嫌，但比起逗号加弯引号要好多了。",{"type":421,"tag":429,"props":480,"children":481},{},[482],{"type":421,"tag":451,"props":483,"children":486},{"alt":484,"src":485},"直排引号","https://mgear-image.oss-cn-shanghai.aliyuncs.com/image/200619/browser_06_20_013.png",[],{"type":421,"tag":429,"props":488,"children":489},{},[490],{"type":427,"value":491},"“为什么在你的博客中要使用直排引号排版？”",{"type":421,"tag":429,"props":493,"children":494},{},[495],{"type":427,"value":496},"“因为好看。”",{"type":421,"tag":429,"props":498,"children":499},{},[500],{"type":427,"value":501},"“可是这样并不规范...”",{"type":421,"tag":429,"props":503,"children":504},{},[505],{"type":427,"value":506},"“可是好看。”",{"type":421,"tag":429,"props":508,"children":509},{},[510,512,518],{"type":427,"value":511},"关于直角引号使用的规范，一般资料表示：",{"type":421,"tag":513,"props":514,"children":515},"strong",{},[516],{"type":427,"value":517},"“竖排中文使用直角引号，横排文字使用弯引号”",{"type":427,"value":519},"。不过在我个人的博客里，放弃使用弯引号并没什么可追究的。就像我喜欢用三点省略号作为全省略号的替代，直角引号配合中文方块字，也纯属喜好。",{"type":421,"tag":440,"props":521,"children":523},{"id":522},"hacker",[524],{"type":427,"value":525},"Hacker",{"type":421,"tag":429,"props":527,"children":528},{},[529,531,537],{"type":427,"value":530},"其实，为了不更正我在中文输入中，从使用英文标点加空格到改为使用中文标点一贯以来的习惯。我在博客项目里，通过技术手段给弯引号加了魔法，使博客页面上的弯引号看起来是直角引号，而打字时，不用特意输入直角引号，直接 ",{"type":421,"tag":532,"props":533,"children":534},"keyboard",{},[535],{"type":427,"value":536},"Shift + \"",{"type":427,"value":538},