    display: block;
    margin: 1.5em auto;
    margin-bottom: 0;
    max-width: 100%;
    vertical-align: middle;
    border: solid 1px;

    & + figcaption {
        margin-top: 0.3em;
        margin-bottom: 0.5em;
        text-align: center;
        font-size: 12px;
        overflow: hidden;
    }
}

